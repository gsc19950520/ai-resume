/* app.wxss */
/* 全局样式重置和基础设置 */
page, view, text, image, button, input, textarea, navigator {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
  background-color: #F8FAFC;
  color: #0F172A;
  font-size: 14px;
  line-height: 1.5;
}

/* 通用样式 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn {
  display: block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 14rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  transition: all 0.3s ease;
}

.btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-primary {
  background-color: #4F46E5;
  color: #fff;
}

.btn-default {
  background-color: #FFFFFF;
  color: #0F172A;
  border: 1rpx solid #E2E8F0;
}

.btn-secondary {
  background-color: #F1F5F9;
  color: #64748B;
  border: none;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #FFFFFF;
  color: #0F172A;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 14rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #0F172A;
}

.subtitle {
  font-size: 28rpx;
  color: #64748B;
  margin-bottom: 16rpx;
}

/* 间距工具类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }
.mx-10 { margin-left: 10rpx; margin-right: 10rpx; }
.my-10 { margin-top: 10rpx; margin-bottom: 10rpx; }

/* 文本工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }
.text-primary { color: #4F46E5; }
.text-danger { color: #EF4444; }
.text-success { color: #10B981; }
.text-warning { color: #F59E0B; }
.text-disabled { color: #94A3B8; }
.text-muted { color: #64748B; }

/* 阴影效果 */
.shadow-sm {
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.shadow {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.shadow-lg {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

/* 圆角工具类 */
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 12rpx; }
.rounded-xl { border-radius: 16rpx; }
.rounded-full { border-radius: 9999rpx; }

/* 过渡动画 */
.transition {
  transition: all 0.3s ease;
}

/* 弹性布局工具类 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 隐藏滚动条但保留功能 */
.hidden-scrollbar::-webkit-scrollbar {
  display: none;
}
.hidden-scrollbar {
  -ms-overflow-style: none;
  scrollbar-width: none;
}