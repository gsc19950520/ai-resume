/* pages/report/report.wxss */

/* 页面容器 */
.report-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.report-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载指示器 */
.loading-indicator {
  display: flex;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 报告内容区域 */
.report-content {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 600rpx;
}

/* Markdown内容样式 */
.markdown-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  padding: 10rpx 0;
}

/* 二级标题样式（报告各部分标题） */
.markdown-content h2.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin: 40rpx 0 25rpx 0;
  padding-bottom: 15rpx;
  border-bottom: 3rpx solid #3498db;
  background-color: #f8f9fa;
  padding-left: 20rpx;
  border-radius: 8rpx;
}

/* 粗体样式（核心关键词高亮） */
.markdown-content strong.highlight {
  font-weight: bold;
  color: #e74c3c;
  background-color: #fff3f3;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

/* 无序列表样式 */
.markdown-content ul.content-list {
  margin: 20rpx 0;
  padding-left: 50rpx;
}

.markdown-content li.list-item {
  margin: 15rpx 0;
  color: #555;
  position: relative;
}

/* Markdown段落样式 */
.markdown-content p {
  margin: 20rpx 0;
  text-align: justify;
  color: #444;
}

/* Markdown文本样式优化 */
.markdown-content {
  /* 添加默认段落样式，处理没有包裹在p标签内的文本 */
  white-space: pre-wrap;
  word-break: break-word;
}

/* 报告内容区域优化 */
.report-content {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 600rpx;
  /* 添加内边距，提升阅读体验 */
  line-height: 1.9;
}

/* 生成完成提示 */
.complete-tip {
  margin-top: 20rpx;
  text-align: center;
  padding: 20rpx;
}

.complete-text {
  font-size: 28rpx;
  color: #27ae60;
  font-weight: bold;
}