/* pages/report/report.wxss */

/* 页面容器 */
.report-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.report-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载指示器 */
.loading-indicator {
  display: flex;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 报告内容区域 */
.report-content {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 600rpx;
}

/* Markdown内容样式 */
.markdown-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

/* Markdown标题样式 */
.markdown-content h1 {
  font-size: 44rpx;
  font-weight: bold;
  color: #2c3e50;
  margin: 40rpx 0 20rpx 0;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.markdown-content h2 {
  font-size: 38rpx;
  font-weight: bold;
  color: #34495e;
  margin: 30rpx 0 15rpx 0;
}

.markdown-content h3 {
  font-size: 34rpx;
  font-weight: bold;
  color: #555;
  margin: 25rpx 0 10rpx 0;
}

/* Markdown段落样式 */
.markdown-content p {
  margin: 20rpx 0;
  text-align: justify;
}

/* Markdown列表样式 */
.markdown-content ul,
.markdown-content ol {
  margin: 20rpx 0;
  padding-left: 40rpx;
}

.markdown-content li {
  margin: 10rpx 0;
}

/* Markdown粗体样式 */
.markdown-content strong {
  font-weight: bold;
  color: #2c3e50;
}

/* Markdown斜体样式 */
.markdown-content em {
  font-style: italic;
  color: #666;
}

/* Markdown代码块样式 */
.markdown-content code {
  background-color: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: monospace;
  font-size: 26rpx;
  color: #e74c3c;
}

.markdown-content pre {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  overflow-x: auto;
  margin: 20rpx 0;
}

.markdown-content pre code {
  background-color: transparent;
  padding: 0;
  border-radius: 0;
}

/* Markdown引用样式 */
.markdown-content blockquote {
  border-left: 8rpx solid #3498db;
  padding-left: 20rpx;
  margin: 20rpx 0;
  color: #666;
  font-style: italic;
}

/* Markdown分隔线样式 */
.markdown-content hr {
  border: none;
  border-top: 2rpx solid #e0e0e0;
  margin: 40rpx 0;
}

/* 生成完成提示 */
.complete-tip {
  margin-top: 20rpx;
  text-align: center;
  padding: 20rpx;
}

.complete-text {
  font-size: 28rpx;
  color: #27ae60;
  font-weight: bold;
}