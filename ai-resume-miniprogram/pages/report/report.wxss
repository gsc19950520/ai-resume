/* 页面外层 */
.report-container {
  width: 100%;
  min-height: 100vh;
  background: #f7f9fb;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 顶部标题卡片 */
.report-header {
  text-align: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
}

.report-title {
  font-size: 50rpx;
  font-weight: 700;
  color: #1f2d3d;
}

.report-subtitle {
  font-size: 26rpx;
  color: #99aabb;
  margin-top: 10rpx;
  letter-spacing: 1rpx;
}

/* 主体内容容器 */
.report-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.04);
}

/* 模块外层 */
.section {
  margin-bottom: 42rpx;
  border-radius: 18rpx;
  background: #ffffff;
  border: 1rpx solid #eef1f5;
  overflow: hidden;
}

/* 模块标题 */
.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 30rpx;
  background: linear-gradient(90deg, #4c8dff, #2d71ff);
  color: white;
}

.title-left {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 34rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 分数 */
.total-score {
  background: rgba(255, 255, 255, 0.20);
  padding: 8rpx 22rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
}

/* 模块正文 */
.section-body {
  padding: 30rpx;
}

/* 段落文本 */
.paragraph {
  font-size: 30rpx;
  color: #333;
  line-height: 1.85;
  white-space: pre-wrap;
  text-align: justify;
}

/* 列表项 */
.list-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.item-bullet {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-top: 14rpx;
  margin-right: 20rpx;
}

/* 颜色标记 */
.item-bullet.positive {
  background: #63d26e;
}

.item-bullet.warning {
  background: #ffb84d;
}

.item-text {
  font-size: 30rpx;
  line-height: 1.7;
  color: #444;
}

/* 空数据 */
.empty-text {
  text-align: center;
  color: #aaa;
  font-size: 28rpx;
  padding: 20rpx 0;
  font-style: italic;
}

/* 加载 */
.loading-container {
  margin-top: 200rpx;
  text-align: center;
}

.loading-spinner {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 8rpx solid #e0e0e0;
  border-top-color: #4c8dff;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% {transform: rotate(0);}
  100% {transform: rotate(360deg);}
}

.loading-text {
  color: #6b7a8c;
  font-size: 30rpx;
}
