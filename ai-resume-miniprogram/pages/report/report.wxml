<!--pages/report/report.wxml-->
<view class="report-container">
  <!-- 页面标题 -->
  <view class="report-header">
    <text class="report-title">面试报告</text>
    <view class="loading-indicator" wx:if="{{isLoading}}">
      <text class="loading-text">生成中...</text>
    </view>
  </view>

  <!-- 报告内容区域 -->
  <view class="report-content">
    <!-- 使用rich-text组件渲染markdown内容 -->
    <rich-text nodes="{{renderedContent}}" class="markdown-content"></rich-text>
  </view>

  <!-- 加载完成提示 -->
  <view class="complete-tip" wx:if="{{isComplete && !isLoading}}">
    <text class="complete-text">报告生成完成</text>
  </view>
</view>