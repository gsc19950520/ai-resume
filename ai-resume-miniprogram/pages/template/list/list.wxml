<!-- list.wxml -->
<view class="container">
  <!-- 顶部标题区域 -->
  <view class="section-header">
    <text class="section-title">简历模板</text>
  </view>
  
  <!-- 加载中 -->
  <view class="loading-container" wx:if="{{loading}}">
    <loading class="loading">加载中...</loading>
  </view>

  <!-- 模板列表 - 左右两列网格布局 -->
  <view class="template-grid" wx:else>
    <view class="template-card" wx:for="{{templateList}}" wx:key="id">
      <!-- 模板卡片容器 - 点击整个卡片预览模板 -->
      <view class="template-wrapper" bindtap="previewTemplate" data-id="{{item.id}}" data-name="{{item.name}}">
        <!-- 缩略图区域 -->
        <view class="thumbnail-container">
          <image class="template-thumbnail" src="{{item.preview || '/images/default-template.png'}}" mode="aspectFill"></image>
          <!-- 模板类型标签 -->
          <view class="template-type" wx:if="{{item.type}}">{{item.type}}</view>
        </view>
        
        <!-- 模板信息区域 -->
        <view class="template-info">
          <view class="template-name">{{item.name}}</view>
          <view class="template-desc">{{item.description || '专业简历模板'}}</view>
        </view>
      </view>
    </view>
  </view>
</view>