<!-- list.wxml -->
<view class="container">
  <!-- 加载中 -->
  <view class="loading-container" wx:if="{{loading}}">
    <loading class="loading">加载中...</loading>
  </view>

  <!-- 模板列表 -->
  <view class="template-list" wx:else>
    <view class="template-item" wx:for="{{templateList}}" wx:key="id">
      <!-- 模板预览图 -->
      <view class="template-preview">
        <image src="{{item.preview || '/images/default-template.png'}}" mode="aspectFill" bindtap="previewTemplate" data-id="{{item.id}}" data-name="{{item.name}}"></image>
      </view>
      
      <!-- 模板信息 -->
      <view class="template-info">
        <text class="template-name">{{item.name}}</text>
        <text class="template-description">{{item.description}}</text>
        <view class="template-type">
          <text class="type-tag">{{item.type === 'basic' ? '基础' : item.type === 'technical' ? '技术' : item.type === 'creative' ? '创意' : '学术'}}</text>
        </view>
      </view>
      
      <!-- 操作按钮 -->
      <view class="template-actions">
        <button class="preview-btn" size="mini" bindtap="previewTemplate" data-id="{{item.id}}" data-name="{{item.name}}">预览</button>
        <button class="select-btn" size="mini" type="primary" bindtap="selectTemplate" data-id="{{item.id}}" data-name="{{item.name}}">使用</button>
      </view>
    </view>
  </view>
</view>