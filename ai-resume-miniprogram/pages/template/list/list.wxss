/* list.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0 24rpx 40rpx;
}

/* 通用区块标题 - 与AI模拟面试页面风格统一 */
.section-header {
  padding: 32rpx 0 24rpx;
  margin-bottom: 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 模板网格布局 - 左右两列 */
.template-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.template-card {
  width: 100%;
}

/* 模板卡片容器 - 只显示缩略图 */
.template-wrapper {
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.template-wrapper:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 缩略图容器 - 改进版本，避免绝对定位导致的渲染问题 */
.thumbnail-container {
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 140%; /* 保持简历的宽高比 */
  overflow: hidden;
  border-radius: 16rpx;
  background-color: #f8f8f8; /* 添加背景色，避免空白闪烁 */
  z-index: 1; /* 确保正确的层级关系 */
}

/* 缩略图样式 - 使用更安全的定位方式 */
.template-thumbnail {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16rpx;
  display: block; /* 确保正确渲染 */
  transform: translateZ(0); /* 触发硬件加速，减少渲染闪烁 */
}

/* 缩略图占位元素样式 - 确保与图片大小一致 */
.thumbnail-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
  border-radius: 16rpx;
  display: block;
}

.vip-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: linear-gradient(90deg, #FFD700, #FFA500);
  color: #333;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  z-index: 10;
}

.free-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: linear-gradient(90deg, #00C853, #66BB6A);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  z-index: 10;
}

/* 模板样式已简化，只显示缩略图 */

/* 占位元素样式 - 确保页面加载过程中布局稳定 */
.template-grid-placeholder {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.template-card-placeholder {
  width: 100%;
  height: 0;
  padding-top: 140%; /* 与实际卡片保持相同的宽高比 */
  border-radius: 16rpx;
  background-color: #f8f8f8; /* 使用与容器相同的背景色 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05); /* 与实际卡片保持相同的阴影效果 */
}