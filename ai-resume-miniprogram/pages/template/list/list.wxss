/* list.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0 24rpx 40rpx;
}

/* 通用区块标题 - 与AI模拟面试页面风格统一 */
.section-header {
  padding: 32rpx 0 24rpx;
  margin-bottom: 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading {
  font-size: 32rpx;
  color: #666;
}

/* 模板网格布局 - 左右两列 */
.template-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.template-card {
  width: 100%;
}

/* 模板卡片容器 - 类似AI模拟面试页面的卡片样式 */
.template-wrapper {
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.template-wrapper:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 缩略图容器 */
.thumbnail-container {
  position: relative;
  width: 100%;
  padding-top: 140%; /* 保持宽高比 */
  overflow: hidden;
}

/* 缩略图样式 */
.template-thumbnail {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16rpx 16rpx 0 0;
}

/* 模板类型标签 */
.template-type {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background-color: rgba(7, 193, 96, 0.8);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 模板信息区域 */
.template-info {
  padding: 20rpx 20rpx 24rpx;
}

/* 模板名称 */
.template-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 模板描述 */
.template-desc {
  font-size: 24rpx;
  color: #64748B;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}