/* list.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0 24rpx 40rpx;
}

/* 通用区块标题 - 与AI模拟面试页面风格统一 */
.section-header {
  padding: 32rpx 0 24rpx;
  margin-bottom: 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading {
  font-size: 32rpx;
  color: #666;
}

/* 模板网格布局 - 左右两列 */
.template-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.template-card {
  width: 100%;
}

/* 模板卡片容器 - 只显示缩略图 */
.template-wrapper {
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.template-wrapper:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 缩略图容器 */
.thumbnail-container {
  position: relative;
  width: 100%;
  padding-top: 140%; /* 保持简历的宽高比 */
  overflow: hidden;
}

/* 缩略图样式 */
.template-thumbnail {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16rpx;
}

/* 模板样式已简化，只显示缩略图 */