.resume-preview {
  background: white;
  margin: 0 auto;
  position: relative;
  border: none;
  /* A4尺寸比例 210mm:297mm = 1:1.4142 */
  width: 100%;
  height: 141.42vw; /* 根据宽度等比计算高度 */
  max-height: 1414.2rpx; /* 最大高度限制，防止在大屏幕上过高 */
  overflow: hidden;
  transform: none;
  box-sizing: border-box;
}

/* 使用模板按钮样式 */
.action-container {
  width: 100%;
  padding: 20rpx 0 40rpx;
  display: flex;
  justify-content: center;
  position: fixed; /* 固定定位在屏幕底部 */
  bottom: 100rpx; /* 向上移动1厘米（约100rpx） */
  left: 0;
  margin-bottom: 0;
  background: white;
  z-index: 9999; /* 确保在最上层 */
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.action-container::after {
  display: none; /* 确保没有伪元素产生空白 */
}

