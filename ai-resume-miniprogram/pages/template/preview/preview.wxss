/* 样式隔离机制：通过容器类名隔离不同模板的样式 */
/* 各模板样式将通过各自的命名空间前缀实现隔离 */
@import './template/one/template-one.wxss';
@import './template/two/template-two.wxss';
@import './template/three/template-three.wxss';
@import './template/four/template-four.wxss';
@import './template/five/template-five.wxss';
/* 基础样式设置，确保模板内容正常显示 */

/* 确保模板内容区域样式正确应用 */
.template-content {
  position: relative;
  z-index: 1;
}

/* 基础页面样式 */
page {
  background-color: #f5f5f5;
  padding-bottom: 150rpx;
  overflow-y: auto;
}

/* 预览容器样式 */
.preview-container {
  width: 100%;
  min-height: 10vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 动态模板渲染样式 */
.template-content {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 150rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 使用模板按钮样式 */
.action-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 9999;
  box-sizing: border-box;
}

.use-template-btn {
  width: 100%;
  background-color: #1677ff;
  color: white;
  border: none;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.3);
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.use-template-btn:active {
  background-color: #0958d9;
}