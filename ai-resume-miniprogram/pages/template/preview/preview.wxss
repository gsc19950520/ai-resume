/* preview.wxss */
/* 导入全局样式重置 */
@import '../../../app.wxss';

.container {
  padding: 0 24rpx 60rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', sans-serif;
}

/* 顶部操作栏 - 精致设计 */
.toolbar {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 24rpx 32rpx 28rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  margin: 20rpx 0 32rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
}

.template-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #1a202c;
  flex: 1;
  text-align: center;
  background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 1rpx;
  margin: 0 20rpx;
}

/* 返回按钮 - 精致次要按钮 */
.back-btn {
  font-size: 28rpx;
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 36rpx;
  background: white;
  color: #4a5568;
  border-radius: 20rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f1f1f1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.back-btn .back-icon {
  width: 24rpx;
  height: 24rpx;
  border-left: 4rpx solid #4a5568;
  border-bottom: 4rpx solid #4a5568;
  transform: rotate(45deg);
  margin-right: -4rpx;
}

.back-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  background: #f8f9fa;
}

/* 使用此模板按钮 - 精致主要按钮 */
.use-btn {
  font-size: 28rpx;
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 36rpx;
  background: linear-gradient(135deg, #07c160 0%, #06b356 100%);
  color: white;
  border-radius: 20rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
  border: none;
  margin-left: 16rpx;
}

.use-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.25);
  background: linear-gradient(135deg, #06b356 0%, #05a650 100%);
}

/* 预览容器 - 居中显示 */
.preview-container {
  display: flex;
  justify-content: center;
  animation: fadeInUp 0.5s ease-out;
}

/* 简历卡片基础样式 - A4纸尺寸设计 */
.resume-card {
  width: 90%;
  max-width: 710rpx; /* 按照A4比例 (210mm × 297mm) 设置，微信小程序中约710rpx宽比较合适 */
  min-height: 997rpx; /* A4高度比例 */
  height: auto;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #e5e7eb;
  position: relative;
  overflow: visible;
  font-size: 18rpx; /* 基础字体大小缩小 */
  box-sizing: border-box;
  margin: 0 auto;
}

/* 简历卡片基础样式 */
.resume-layout {
  width: 100%;
  min-height: 997rpx;
  height: auto;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 标准两栏布局 */
.two-column-standard {
  display: flex;
}

.two-column-standard .left-column {
  width: 25%;
  padding-right: 20rpx;
  box-sizing: border-box;
  border-right: 1rpx solid #e8e8e8;
}

.two-column-standard .right-column {
  width: 75%;
  padding-left: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 技能侧边栏布局 */
.skills-sidebar {
  display: flex;
  flex-direction: column;
}

.skills-sidebar .top-section {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.skills-sidebar .bottom-layout {
  display: flex;
  flex: 1;
}

.skills-sidebar .skills-column {
  width: 25%;
  padding-right: 20rpx;
  box-sizing: border-box;
  border-right: 1rpx solid #e8e8e8;
}

.skills-sidebar .main-column {
  width: 75%;
  padding-left: 20rpx;
  box-sizing: border-box;
  flex: 1;
}

/* ==== 1. 增强版两栏布局：简约专业模板 ==== */
.enhanced-two-column {
  display: flex;
  height: 100%;
}

.enhanced-two-column .left-column {
  width: 25%;
  padding-right: 20rpx;
  box-sizing: border-box;
  border-right: 2rpx solid #e8e8e8;
  display: flex;
  flex-direction: column;
}

.enhanced-two-column .right-column {
  width: 75%;
  padding-left: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.enhanced-two-column .personal-info {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

.enhanced-two-column .vertical-skills {
  flex-direction: column;
  flex-wrap: nowrap;
}

.enhanced-two-column .skill-tag {
  background: none;
  padding: 8rpx 0;
  margin: 0;
  border-radius: 0;
  display: flex;
  align-items: center;
  font-size: 16rpx;
}

.enhanced-two-column .skill-dot {
  margin-right: 10rpx;
  font-size: 20rpx;
}

.certification-item {
  margin-bottom: 15rpx;
}

.cert-name {
  font-weight: bold;
  font-size: 16rpx;
  display: block;
  margin-bottom: 5rpx;
}

.cert-date {
  font-size: 14rpx;
  color: #666;
}

.language-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 16rpx;
}

.language-name {
  font-weight: bold;
}

.language-level {
  color: #666;
}

/* ==== 2. 技能聚焦三栏布局：技术人才模板 ==== */
.skills-focus-three-column {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.skills-focus-three-column .top-section {
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #e8e8e8;
  display: flex;
  align-items: center;
}

.skills-focus-three-column .bottom-three-column {
  display: flex;
  flex: 1;
  margin-bottom: 20rpx;
  gap: 15rpx;
}

.skills-focus-three-column .left-column,
.skills-focus-three-column .center-column,
.skills-focus-three-column .right-column {
  flex: 1;
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
}

.skills-focus-three-column .left-column {
  border-right: 1rpx solid #e8e8e8;
}

.skills-focus-three-column .right-column {
  border-left: 1rpx solid #e8e8e8;
}

.skills-focus-three-column .full-width-section {
  padding-top: 15rpx;
  border-top: 2rpx solid #e8e8e8;
}

.hero-personal-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
}

.horizontal-contact {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15rpx;
  margin-bottom: 10rpx;
}

.skills-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.skill-item {
  background-color: #f5f5f5;
  padding: 12rpx;
  border-radius: 6rpx;
  text-align: center;
  font-size: 16rpx;
}

.tech-stack-item {
  margin-bottom: 15rpx;
}

.tech-category {
  font-weight: bold;
  display: block;
  margin-bottom: 6rpx;
  color: #333;
  font-size: 16rpx;
}

.tech-skills {
  font-size: 16rpx;
  color: #666;
}

.achievement-item {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
}

.achievement-number {
  background-color: #07c160;
  color: white;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
  font-size: 16rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.achievement-text {
  flex: 1;
  line-height: 1.5;
  font-size: 16rpx;
}

/* ==== 3. 垂直分层创意布局：创意设计模板 ==== */
.vertical-layers-creative {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.hero-section {
  background-color: #f8f9fa;
  padding: 25rpx;
  margin-bottom: 25rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.creative-personal-info {
  text-align: center;
}

.creative-bottom-layout {
  display: flex;
  flex: 1;
  gap: 25rpx;
}

.creative-bottom-layout .sidebar {
  width: 30%;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
}

.creative-bottom-layout .main-content {
  width: 70%;
  display: flex;
  flex-direction: column;
}

.creative-section-title {
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  padding-bottom: 8rpx;
  border-bottom: 3rpx solid currentColor;
  text-align: center;
}

.skill-badge {
  background-color: #fff;
  padding: 12rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  font-size: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  display: inline-block;
}

.approach-item {
  margin-bottom: 15rpx;
  padding-left: 15rpx;
  position: relative;
}

.approach-item::before {
  content: '→';
  position: absolute;
  left: 0;
  color: currentColor;
}

.approach-text {
  line-height: 1.5;
  font-size: 16rpx;
}

.interests-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.interest-tag {
  background-color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  margin: 0 8rpx 12rpx 0;
  font-size: 16rpx;
  border: 2rpx dashed #ccc;
}

.work-item.creative-work,
.education-item.creative-education {
  display: flex;
  margin-bottom: 25rpx;
  position: relative;
}

.work-timeline,
.education-timeline {
  width: 6rpx;
  background-color: #eee;
  margin-right: 15rpx;
  position: relative;
}

.work-timeline::before,
.education-timeline::before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: currentColor;
  position: absolute;
  left: -7rpx;
  top: 5rpx;
}

.work-details,
.education-details {
  flex: 1;
}

.creative-evaluation {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  border-left: 6rpx solid currentColor;
}

/* ==== 4. 学术网格布局：学术研究模板 ==== */
.academic-grid {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.header-section {
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 3rpx solid #eee;
}

.academic-personal-info {
  text-align: center;
}

.academic-contact {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20rpx;
}

.academic-bottom-layout {
  display: flex;
  flex: 1;
  gap: 25rpx;
}

.academic-bottom-layout .left-column {
  width: 40%;
  border-right: 2rpx solid #eee;
  padding-right: 20rpx;
}

.academic-bottom-layout .right-column {
  width: 60%;
  padding-left: 20rpx;
}

.academic-section-title {
  font-size: 20rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid currentColor;
}

.academic-education .education-detail {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.research-interest-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.interest-number {
  font-weight: bold;
  color: currentColor;
  margin-right: 12rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

.interest-text {
  flex: 1;
  line-height: 1.5;
  font-size: 16rpx;
}

.publication-item {
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.publication-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.publication-title {
  font-weight: bold;
  font-size: 16rpx;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.publication-authors {
  font-size: 16rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.publication-source {
  font-size: 14rpx;
  color: #888;
  font-style: italic;
}

.academic-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.academic-skills .skill-tag {
  background-color: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 16rpx;
  border: 1rpx solid #eee;
}

/* 反向两栏布局 */
.two-column-reversed {
  display: flex;
}

.two-column-reversed .main-column {
  width: 75%;
  padding-right: 20rpx;
  box-sizing: border-box;
  border-right: 1rpx solid #e8e8e8;
}

.two-column-reversed .right-column {
  width: 25%;
  padding-left: 20rpx;
  box-sizing: border-box;
}

/* 个人信息置顶布局 */
.personal-info-top {
  display: flex;
  flex-direction: column;
}

.personal-info-top .top-section {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.personal-info-top .bottom-section {
  display: flex;
  flex: 1;
  gap: 15rpx;
}

.personal-info-top .academic-column {
  width: 25%;
  padding-right: 10rpx;
  box-sizing: border-box;
}

.personal-info-top .professional-column {
  width: 50%;
  padding: 0 10rpx;
  box-sizing: border-box;
  border-left: 1rpx solid #e8e8e8;
  border-right: 1rpx solid #e8e8e8;
}

.personal-info-top .skills-column {
  width: 25%;
  padding-left: 10rpx;
  box-sizing: border-box;
}

/* 内容区块 */
.content-section {
  margin-bottom: 15rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .resume-layout {
    flex-direction: column;
  }
  
  .left-column {
    width: 100%;
    padding-right: 0;
    border-right: none;
    border-bottom: 1rpx solid #e5e7eb;
    padding-bottom: 10rpx;
    margin-bottom: 10rpx;
  }
  
  .right-column {
    width: 100%;
    padding-left: 0;
  }
  
  .personal-info {
    text-align: center;
  }
  
  .contact-info {
    align-items: center;
  }
}

/* A4纸尺寸适配 */
@media (min-width: 376px) {
  .resume-card {
    width: 710rpx; /* A4宽度的比例 */
    margin: 20rpx auto;
  }
  
  /* 确保内容不会溢出A4区域 */
  .right-column {
    overflow-wrap: break-word;
    word-break: break-word;
  }
  
  /* 调整内容间距以适应A4尺寸 */
  .content-section {
    margin-bottom: 12rpx;
  }
}

/* 模板视觉标识 */
.template-marker {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  border-radius: 3rpx;
  opacity: 0.8;
}

.resume-card:active {
  box-shadow: 0 15rpx 50rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

/* 通用区块样式 */
.section {
  margin-top: 15rpx;
  position: relative;
}

.section::before {
  content: none; /* 移除装饰条以节省空间 */
}

.section-title {
  font-size: 20rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  padding-bottom: 4rpx;
  letter-spacing: 0rpx;
  position: relative;
  display: inline-block;
  width: 100%;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
  background: linear-gradient(90deg, currentColor 0%, transparent 100%);
}

.section-content {
  font-size: 16rpx;
  line-height: 28rpx;
  color: #4a5568;
}

/* 个人信息样式 */
.personal-info {
  text-align: left;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #e5e7eb;
  position: relative;
  margin-bottom: 0;
}

.personal-info::after {
  content: none; /* 移除装饰元素以节省空间 */
}

.name {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  margin-bottom: 5rpx;
  letter-spacing: 0rpx;
}

.job-title {
  display: block;
  font-size: 18rpx;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  align-items: flex-start;
}

.contact-item {
  font-size: 16rpx;
  color: #6b7280;
  padding: 2rpx 8rpx;
  background: transparent;
  border-radius: 6rpx;
  border: 1rpx solid #f1f1f1;
  display: flex;
  align-items: center;
  gap: 4rpx;
  white-space: nowrap;
}

.contact-item:active {
  background: #f3f4f6;
  transform: scale(0.98);
}

.contact-icon {
  font-size: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-text {
  font-size: 16rpx;
  font-weight: 500;
}

/* 教育经历样式 */
.education-item, .work-item, .project-item {
  margin-bottom: 10rpx;
  padding: 8rpx;
  background: transparent;
  border-radius: 4rpx;
  border: none;
}

.education-header, .work-header, .project-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
  flex-wrap: wrap;
}

.school, .company, .project-name {
  font-weight: 700;
  font-size: 18rpx;
  color: #1f2937;
  flex: 1;
}

.date {
  font-size: 14rpx;
  color: #9ca3af;
  background: #f3f4f6;
  padding: 1rpx 6rpx;
  border-radius: 4rpx;
  white-space: nowrap;
}

.education-detail {
  margin-left: 4rpx;
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.major, .degree {
  color: #4b5563;
  font-weight: 500;
  background: #f9fafb;
  padding: 1rpx 8rpx;
  border-radius: 4rpx;
  border: 1rpx solid #f1f1f1;
  font-size: 16rpx;
}

.position, .role {
  display: block;
  margin-bottom: 4rpx;
  font-weight: 600;
  color: #374151;
  font-size: 16rpx;
}

.description {
  display: block;
  color: #6b7280;
  margin-left: 4rpx;
  line-height: 24rpx;
  background: transparent;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  border-left: 2rpx solid #e5e7eb;
  font-size: 16rpx;
}

/* 专业技能样式 */
.skills-container {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  padding: 4rpx;
}

.skill-tag {
  background: #f0fdf4;
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-size: 16rpx;
  font-weight: 500;
  color: #166534;
  border: 1rpx solid #bbf7d0;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.skill-dot {
  font-size: 12rpx;
  opacity: 0.8;
  font-weight: bold;
}

/* 自我评价样式 */
.self-evaluation {
  color: #4b5563;
  line-height: 24rpx;
  background: transparent;
  padding: 8rpx;
  border-radius: 6rpx;
  border: 1rpx solid #f3f4f6;
  font-size: 16rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.eval-quote {
  font-size: 20rpx;
  opacity: 0.2;
  line-height: 1;
