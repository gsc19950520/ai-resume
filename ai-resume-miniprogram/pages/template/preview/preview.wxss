/* 样式隔离机制：通过容器类名隔离不同模板的样式 */
/* 各模板样式将通过各自的命名空间前缀实现隔离 */

/* 导入各模板样式 */
@import "./template/one/template-one.wxss";
@import "./template/two/template-two.wxss";
@import "./template/three/template-three.wxss";
@import "./template/four/template-four.wxss";
@import "./template/five/template-five.wxss";
@import "./template/six/template-six.wxss";

/* 基础样式设置，确保模板内容正常显示 */

/* 重置所有可能泄漏的页面级样式 */
page {
  background-color: #f5f5f5;
  padding: 0;
  overflow-y: auto;
  position: relative;
  z-index: 1;
}

/* 预览容器样式 - 添加背景色和更高的z-index以防止其他页面内容泄漏 */
.preview-container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f5f5f5;
  position: relative;
  z-index: 2;
}

/* 动态模板渲染样式 - 确保完全覆盖可能泄漏的内容 */
.template-content {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 150rpx;
  overflow-y: auto;
  box-sizing: border-box;
  position: relative;
  z-index: 3;
  background-color: #f5f5f5;
}

/* 全局重置 - 防止list页面样式泄漏到预览页面 */
.section-title {
  /* 重置list.wxss中可能泄漏的.section-title样式 */
  all: unset;
}

/* 操作区域样式 - 包含模板切换和下载功能 */
.action-container {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  width: 100%;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 9999;
  box-sizing: border-box;
  padding-bottom: 30rpx;
}

/* 模板切换操作区域特定样式 - 向上移动约15%以避免与下载按钮重叠 */
.template-action-container {
  bottom: 180rpx; /* 向上移动约15% */
  padding-bottom: 20rpx;
}

/* 模板切换区域样式 */
.template-switch-container {
  margin-bottom: 20rpx;
}

.template-scroll {
  white-space: nowrap;
  width: 100%;
}

.template-thumbnails {
  display: flex;
  width: 125%;
  padding-bottom: 5rpx;
}

/* 单个模板项样式 */
.template-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 10rpx;
  text-align: center;
  position: relative;
  transition: transform 0.2s;
}

.template-item:active {
  transform: scale(0.95);
}

.template-item.active::after {
  content: '';
  position: absolute;
  bottom: -5rpx;
  left: 30rpx;
  right: 30rpx;
  height: 6rpx;
  background-color: #1677ff;
  border-radius: 3rpx;
}

/* 模板图片样式 */
.template-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  box-sizing: border-box;
}

.template-item.active .template-image {
  border-color: #1677ff;
  box-shadow: 0 0 0 2rpx rgba(22, 119, 255, 0.2);
}

.use-template-btn {
  width: 100%;
  background-color: #1677ff;
  color: white;
  border: none;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(22, 119, 255, 0.3);
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.use-template-btn:active {
  background-color: #0958d9;
}

/* 下载PDF按钮样式 */
.download-pdf-btn {
  width: 100%;
  background-color: #52c41a;
  color: white;
  border: none;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.download-pdf-btn:active {
  background-color: #389e0d;
}