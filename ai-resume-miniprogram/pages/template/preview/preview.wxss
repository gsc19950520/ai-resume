.basic-template {
  border: 2rpx solid #e5e7eb;
}

.basic-template .section-title {
  color: #334155;
  font-weight: 700;
}

.basic-template .section-title::after {
  background: linear-gradient(90deg, #334155 0%, transparent 100%);
}

.basic-template .name {
  color: #1e293b;
}

.basic-template .job-title {
  color: #0284c7;
  font-weight: 600;
}

.basic-template .skill-tag {
  background: #e0f2fe;
  color: #0369a1;
  border: 1rpx solid #bae6fd;
}

/* 技术人才模板样式增强 */
.technical-template {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border: 2rpx solid #e2e8f0;
}

.technical-template .section-title {
  color: #1e40af;
  font-weight: 700;
  background: #eff6ff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.technical-template .section-title::after {
  background: linear-gradient(90deg, #3b82f6 0%, transparent 100%);
}

.technical-template .name {
  color: #0f172a;
  letter-spacing: 3rpx;
}

.technical-template .job-title {
  color: #2563eb;
  font-weight: 600;
}

.technical-template .skill-tag {
  background: #dbeafe;
  color: #1d4ed8;
  border: 1rpx solid #93c5fd;
  font-family: 'Monaco', monospace;
}

/* 创意设计模板样式增强 */
.creative-template {
  background: #ffffff;
  border: 4rpx solid #f5f5f5;
  border-radius: 28rpx;
  overflow: hidden;
}

.creative-template::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 10rpx;
  background: linear-gradient(90deg, #f43f5e, #8b5cf6, #3b82f6, #06b6d4, #10b981);
}

.creative-template .section-title {
  color: #3b3b3b;
  font-weight: 700;
  font-style: italic;
  letter-spacing: 2rpx;
}

.creative-template .section-title::after {
  background: linear-gradient(90deg, #f43f5e 0%, transparent 100%);
  height: 3rpx;
}

.creative-template .name {
  color: #2b2b2b;
  font-style: italic;
  letter-spacing: 6rpx;
  font-size: 52rpx;
}

.creative-template .job-title {
  color: #6b7280;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.creative-template .skill-tag {
  background: #fff5f5;
  color: #dc2626;
  border: 1rpx solid #fecaca;
  transform: rotate(-1deg);
  font-weight: 600;
}

/* 学术研究模板样式增强 */
.academic-template {
  background: #ffffff;
  border: 2rpx solid #f1f5f9;
}

.academic-template .section-title {
  color: #1e293b;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 4rpx;
  font-size: 30rpx;
}

.academic-template .section-title::after {
  background: linear-gradient(90deg, #475569 0%, transparent 100%);
  height: 3rpx;
}

.academic-template .name {
  color: #1e293b;
  font-size: 46rpx;
  letter-spacing: 1rpx;
}

.academic-template .job-title {
  color: #475569;
  font-weight: 500;
}

.academic-template .skill-tag {
  background: #f8fafc;
  color: #334155;
  border: 1rpx solid #cbd5e1;
  font-family: serif;
}

.academic-template .education-item, .academic-template .work-item {
  border-left: 4rpx solid #64748b;
  padding-left: 24rpx;
  border-radius: 0 16rpx 16rpx 0;
}

/* 简历页脚样式 */
.resume-footer {
  margin-top: 60rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.footer-divider {
  width: 120rpx;
  height: 4rpx;
  border-radius: 2rpx;
  margin-bottom: 16rpx;
  opacity: 0.7;
}

.footer-note {
  font-size: 22rpx;
  color: #9ca3af;
  letter-spacing: 1rpx;
}

/* 工作项目头部通用样式 */
.work-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 响应式设计优化 */
@media (max-width: 375px) {
  .container {
    padding: 0 16rpx 40rpx;
  }
  
  .toolbar {
    flex-direction: column;
    gap: 20rpx;
    padding: 24rpx;
    margin: 16rpx 0 24rpx 0;
  }
  
  .template-title {
    order: -1;
    font-size: 34rpx;
    margin-bottom: 8rpx;
  }
  
