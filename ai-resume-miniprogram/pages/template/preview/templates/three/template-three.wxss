.contact-text {
  font-size: 24rpx;
  color: #4a5568;
  font-weight: 400;
}

/* 装饰元素 */
.header-decoration {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(67, 97, 238, 0.08) 0%, transparent 70%);
  z-index: 0;
}

.header-decoration.top-left {
  top: -40rpx;
  left: -40rpx;
}

.header-decoration.bottom-right {
  bottom: -40rpx;
  right: -40rpx;
  background: radial-gradient(circle, rgba(236, 72, 153, 0.08) 0%, transparent 70%);
}

/* 分隔线样式 */
.divider {
  height: 1rpx; /* 分隔线高度为1rpx */
  background-color: #ddd; /* 分隔线颜色为浅灰色 */
  margin: 8rpx 0; /* 分隔线上下方的外边距为8rpx */
}

/* 各部分标题容器样式 */
.section {
  margin-bottom: 10rpx; /* 每个部分下方的外边距为10rpx */
}

/* 部分标题样式 */
.section-title {
  font-size: 18rpx; /* 标题字体大小为18rpx */
  font-weight: bold; /* 字体加粗显示 */
  margin-bottom: 4rpx; /* 标题下方的外边距为4rpx */
  border-bottom: 2rpx solid #333; /* 标题下方有2rpx的深灰色边框 */
  padding-bottom: 1rpx; /* 标题文字与下划线之间的内边距为1rpx */
}

/* 经历项目样式 */
.experience-item {
  margin-bottom: 6rpx; /* 每个经历项目下方的外边距为6rpx */
}

/* 工作经历头部样式 */
.job-header {
  display: flex; /* 使用flex布局 */
  justify-content: space-between; /* 两端对齐，公司信息在左，时间信息在右 */
  margin-bottom: 1rpx; /* 下方外边距为1rpx */
}

/* 公司名称样式 */
.company {
  font-size: 16rpx; /* 公司名称字体大小为16rpx */
  font-weight: bold; /* 字体加粗显示 */
}

/* 职位样式 */
.position {
  font-size: 14rpx; /* 职位字体大小为14rpx */
  color: #666; /* 职位文字颜色为中灰色 */
}

/* 时间样式 */
.time {
  font-size: 12rpx; /* 时间字体大小为12rpx */
  color: #999; /* 时间文字颜色为浅灰色 */
  margin-bottom: 2rpx; /* 下方外边距为2rpx */
}

/* 工作职责样式 */
.job-duties {
  display: flex; /* 使用flex布局 */
  flex-direction: column; /* 子元素垂直排列 */
}

/* 工作职责文本样式 */
.job-duties text {
  font-size: 14rpx; /* 文本字体大小为14rpx */
  margin-bottom: 1.5rpx; /* 文本行之间的间距为1.5rpx */
  line-height: 1.15; /* 行高设置为1.15，使文本更加紧凑 */
  word-break: break-all; /* 允许单词在任意位置换行，防止长单词导致溢出 */
}

/* 技能特长容器样式 - 现代简约 */
.skills {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 单个技能项样式 - 现代简约 */
.skill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 技能名称、等级和熟练度样式 - 现代简约 */
.skill-name {
  font-size: 24rpx;
  color: #2d3748;
  font-weight: 500;
}

.skill-level {
  font-size: 20rpx;
  color: #718096;
  margin-left: 12rpx;
}

.skill-proficiency {
  font-size: 22rpx;
  color: #4a5568;
  background: #f7fafc;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

/* 兴趣爱好文本样式 - 现代简约 */
.hobby {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hobby text {
  font-size: 22rpx;
  color: #4a5568;
  background: #f7fafc;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e2e8f0;
}