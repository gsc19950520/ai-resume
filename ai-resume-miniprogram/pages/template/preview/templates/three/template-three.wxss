/* WXSS代码 - template-three 现代简约风格简历模板样式 */

/* 容器样式 */
.container {
  padding: 30rpx; 
  background-color: #f8fafc; 
  height: 100vh; 
  width: 100%; 
  overflow-y: auto;
  position: relative; 
  margin: 0; 
  box-sizing: border-box;
}

/* 简历主体样式 */
.resume {
  background-color: white; 
  padding: 40rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #2d3748;
  line-height: 1.6;
  max-width: 100%;
  margin: 0 auto;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 头部信息样式 - 现代简约版 */
.header {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

/* 背景装饰 - 简约线条 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #3182ce, #63b3ed);
}

/* 头部布局 */
.header-left {
  text-align: center;
  margin-bottom: 30rpx;
}

.header-right {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 姓名卡片 - 简约设计 */
.name-card {
  margin-bottom: 24rpx;
}

.name {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a202c;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.position-title {
  font-size: 28rpx;
  color: #3182ce;
  font-weight: 500;
  margin-bottom: 8rpx;
}

/* 核心标签 - 简约风格 */
.core-tags {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.tag.primary {
  background: #ebf8ff;
  color: #2b6cb0;
  border: 1rpx solid #bee3f8;
}

.tag.secondary {
  background: #f7fafc;
  color: #4a5568;
  border: 1rpx solid #e2e8f0;
}

.tag.salary {
  background: #fed7d7;
  color: #c53030;
  border: 1rpx solid #feb2b2;
}

/* 信息组 - 简约设计 */
.info-group {
  margin-bottom: 24rpx;
}

.info-item {
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 22rpx;
  font-weight: 600;
  color: #718096;
  margin-bottom: 10rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.info-value {
  font-size: 24rpx;
  color: #2d3748;
  line-height: 1.5;
}

/* 联系方式组 - 简约风格 */
.contact-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.contact-icon {
  width: 28rpx;
  height: 28rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  flex-shrink: 0;
}

