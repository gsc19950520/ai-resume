.contact-text {
  font-size: 22rpx;
  color: #1f2937;
  font-weight: 500;
  flex: 1;
}

/* 装饰元素 */
.header-decoration {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(67, 97, 238, 0.08) 0%, transparent 70%);
  z-index: 0;
}

.header-decoration.top-left {
  top: -40rpx;
  left: -40rpx;
}

.header-decoration.bottom-right {
  bottom: -40rpx;
  right: -40rpx;
  background: radial-gradient(circle, rgba(236, 72, 153, 0.08) 0%, transparent 70%);
}

/* 分隔线样式 - 创意现代 */
.divider {
  height: 2rpx;
  background: linear-gradient(90deg, #8b5cf6 0%, #ec4899 100%);
  margin: 20rpx 0 32rpx 0;
  border-radius: 1rpx;
}

/* 各部分标题容器样式 - 创意现代 */
.section {
  margin-bottom: 36rpx;
  position: relative;
}

/* 部分标题样式 - 创意现代 */
.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 20rpx;
  position: relative;
  display: inline-block;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 4rpx;
  bottom: 4rpx;
  width: 6rpx;
  background: linear-gradient(180deg, #8b5cf6, #ec4899);
  border-radius: 3rpx;
}

/* 经历项目样式 - 创意现代 */
.experience-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.experience-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 工作经历头部样式 - 创意现代 */
.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 公司名称样式 - 创意现代 */
.company {
  font-size: 24rpx;
  font-weight: 700;
  color: #8b5cf6;
}

/* 职位样式 - 创意现代 */
.position {
  font-size: 22rpx;
  color: #1f2937;
  font-weight: 600;
  margin-bottom: 8rpx;
}

/* 时间样式 - 创意现代 */
.time {
  font-size: 18rpx;
  color: #6b7280;
  background: rgba(139, 92, 246, 0.08);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 工作职责样式 - 创意现代 */
.job-duties {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 16rpx;
}

/* 工作职责文本样式 - 创意现代 */
.job-duties text {
  font-size: 20rpx;
  color: #4b5563;
  line-height: 1.5;
  word-break: break-all;
  position: relative;
  padding-left: 24rpx;
}

.job-duties text::before {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 10rpx;
  width: 4rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #8b5cf6, #ec4899);
  border-radius: 50%;
}

/* 技能特长容器样式 - 创意现代 */
.skills {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 单个技能项样式 - 创意现代 */
.skill-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.skill-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 技能名称、等级和熟练度样式 - 创意现代 */
.skill-name {
  font-size: 20rpx;
  color: #1f2937;
  font-weight: 500;
  margin-right: 12rpx;
}

.skill-level,
.skill-proficiency {
  font-size: 16rpx;
  color: #8b5cf6;
  font-weight: 600;
}

/* 兴趣爱好样式 - 创意现代 */
.hobby {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hobby text {
  font-size: 20rpx;
  color: #6b7280;
  background: rgba(255, 255, 255, 0.85);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border-left: 3rpx solid #ec4899;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.hobby text:hover {
  color: #1f2937;
  background: rgba(255, 255, 255, 1);
  transform: translateX(4rpx);
}