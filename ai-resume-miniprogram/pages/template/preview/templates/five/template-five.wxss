/* WXSS代码 - template-two 简历模板样式 */

/* 模板样式 - 创意现代版 */

/* 容器样式 */
.container {
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  min-height: 100vh;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y: auto;
}

/* 简历主体样式 */
.resume {
  width: 100%;
  max-width: 820rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.15);
  padding: 50rpx;
  position: relative;
  overflow: hidden;
  line-height: 1.6;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #333;
  box-sizing: border-box;
}

.resume::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 280rpx;
  height: 280rpx;
  background: linear-gradient(135deg, #8b5cf6, #ec4899);
  border-radius: 0 0 0 280rpx;
  opacity: 0.08;
  z-index: 0;
}

.resume::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #3b82f6, #06b6d4);
  border-radius: 200rpx 0 0 0;
  opacity: 0.08;
  z-index: 0;
}

/* 头部信息样式 - 创意现代 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
  background: linear-gradient(135deg, #8b5cf6, #ec4899);
  border-radius: 20rpx;
  color: white;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: repeating-linear-gradient(45deg, transparent, transparent 40rpx, rgba(255,255,255,0.1) 40rpx, rgba(255,255,255,0.1) 80rpx);
  opacity: 0.2;
  animation: gradientShift 15s ease infinite;
}

@keyframes gradientShift {
  0% { background-position: 0 0; }
  100% { background-position: 400rpx 400rpx; }
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  z-index: 1;
  width: 100%;
}

.header-left {
  margin-bottom: 24rpx;
  width: 100%;
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* 姓名卡片样式 - 创意现代 */
.name-card {
  margin-bottom: 24rpx;
}

.name {
  font-size: 48rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.position-title {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 3rpx;
}

/* 核心标签样式 - 创意现代 */
.core-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
  margin-top: 24rpx;
}

.tag {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 20rpx;
  color: #8b5cf6;
  background-color: rgba(255,255,255,0.95);
  border: none;
  font-weight: 500;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
}

.tag:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.16);
}

/* 信息组 - 创意现代 */
.info-group {
  background: rgba(255, 255, 255, 0.95);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #8b5cf6;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
}

.info-item {
  margin-bottom: 16rpx;
  position: relative;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 20rpx;
  font-weight: 600;
  color: #8b5cf6;
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1.5rpx;
}

.info-value {
  font-size: 24rpx;
  color: #1f2937;
  line-height: 1.6;
  font-weight: 500;
}

/* 联系方式组 - 创意现代 */
.contact-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 24rpx;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.contact-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, #8b5cf6, #ec4899);
}

.contact-item:hover {
  background: rgba(255, 255, 255, 1);
  transform: translateX(8rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.contact-icon {
  width: 32rpx;
  height: 32rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  flex-shrink: 0;
  border-radius: 8rpx;
}

