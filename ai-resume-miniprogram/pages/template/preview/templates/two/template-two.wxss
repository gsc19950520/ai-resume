/* WXSS代码 - template-two 简历模板样式 */

/* 容器样式 */
.container {
  padding: 0; /* 设置容器内边距为0，避免多余的空白 */
  background-color: white; /* 容器背景色为白色 */
  height: 100vh; /* 容器高度为视口高度的100%，占据整个屏幕高度 */
  width: 100%; /* 容器宽度为父元素的100% */
  overflow: hidden; /* 隐藏溢出容器的内容，防止出现滚动条 */
  position: relative; /* 设置相对定位，作为绝对定位元素的参考 */
  margin: 0; /* 清除容器的外边距 */
}

/* 简历主体样式 */
.resume {
  background-color: white; /* 简历背景色为白色 */
  padding: 10rpx; /* 设置内边距为10rpx，提供轻微的内边距空间 */
  box-sizing: border-box; /* 盒模型设置为border-box，使宽高包含内边距和边框 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif; /* 设置字体家族，优先使用系统字体 */
  color: #333; /* 文字颜色为深灰色 */
  line-height: 1.15; /* 行高设置为1.15，使文字更加紧凑 */
  width: 140%; /* 宽度增加到140%，进一步减少左右空白 */
  height: 100%; /* 高度设置为父元素的100% */
  transform: scale(0.75); /* 将内容缩小到原来的75%，以便完整展示所有内容 */
  transform-origin: center top; /* 缩放原点设置为顶部居中位置 */
  margin: 0; /* 清除外边距 */
  overflow: hidden; /* 确保没有内容溢出容器 */
  margin-left: -20%; /* 向左偏移20%，使内容居中显示 */
}

/* 头部信息样式 - 精致版 */
.header {
  position: relative;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

/* 背景装饰 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #4361ee, #3a0ca3);
}

/* 左右布局 */
.header-left,
.header-right {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.header-left {
  flex: 1;
}

.header-right {
  flex: 1.2;
}

/* 姓名卡片 */
.name-card {
  background: linear-gradient(135deg, #f8f9ff, #eef2ff);
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #4361ee;
  position: relative;
  overflow: hidden;
}

.name-card::before {
  content: '';
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(67, 97, 238, 0.08);
}

.name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2b2d42;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.position-title {
  font-size: 22rpx;
  color: #4361ee;
  font-weight: 500;
}

/* 核心标签 */
.core-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 18rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tag.primary {
  background: rgba(67, 97, 238, 0.1);
  color: #4361ee;
  border: 1rpx solid rgba(67, 97, 238, 0.3);
}

.tag.secondary {
  background: rgba(107, 114, 128, 0.1);
  color: #6b7280;
  border: 1rpx solid rgba(107, 114, 128, 0.3);
}

.tag.salary {
  background: rgba(236, 72, 153, 0.1);
  color: #ec4899;
  border: 1rpx solid rgba(236, 72, 153, 0.3);
}

.tag:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 信息组 */
.info-group {
  background: #f9fafb;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #f3f4f6;
}

.info-item {
  margin-bottom: 12rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 18rpx;
  font-weight: 600;
  color: #6b7280;
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.info-value {
  font-size: 20rpx;
  color: #374151;
  line-height: 1.4;
}

/* 联系方式组 */
.contact-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: #ffffff;
  border-radius: 10rpx;
  border: 1rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.contact-item:hover {
  background: #f3f4f6;
  border-color: #d1d5db;
  transform: translateX(4rpx);
}

.contact-icon {
  width: 24rpx;
  height: 24rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  flex-shrink: 0;
}

