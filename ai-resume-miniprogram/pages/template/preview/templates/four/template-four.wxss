/* WXSS代码 - template-four 简历模板样式 */

/* 容器样式 */
.container {
  background-color: #f8fafc;
  min-height: 100vh;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y: auto;
}

/* 简历主体样式 */
.resume {
  width: 100%;
  max-width: 850rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  padding: 70rpx 60rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #334155;
  line-height: 1.7;
}

/* 头部信息样式 - 商务专业 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  margin-bottom: 50rpx;
  border-bottom: 2rpx solid #2c5282;
  position: relative;
}

/* 背景装饰 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background: transparent;
}

/* 左右布局 */
.header-left,
.header-right {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.header-left {
  align-items: center;
}

.header-right {
  margin-top: 20rpx;
}

/* 姓名卡片 - 商务专业 */
.name-card {
  text-align: center;
  margin-bottom: 16rpx;
  background: transparent;
  padding: 0;
  border-radius: 0;
  border-left: none;
  position: relative;
  overflow: visible;
  width: 100%;
}

.name-card::before {
  display: none;
}

.name {
  font-size: 48rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.position-title {
  font-size: 28rpx;
  color: #1e40af;
  font-weight: 600;
  letter-spacing: 1.5rpx;
}

/* 核心标签 - 商务专业 */
.core-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
  justify-content: center;
  margin-top: 28rpx;
  padding: 0 20rpx;
}

.tag {
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #1e40af;
  background-color: #f0f9ff;
  border: 1rpx solid #bfdbfe;
  font-weight: 500;
  transition: all 0.2s ease;
}

.tag.primary,
.tag.secondary,
.tag.salary {
  background-color: #f0f9ff;
  color: #1e40af;
  border: 1rpx solid #bfdbfe;
}

.tag:active {
  background-color: #dbeafe;
  transform: translateY(1rpx);
}

/* 信息组 - 商务专业 */
.info-group {
  margin-bottom: 32rpx;
  background-color: #f8fafc;
  padding: 28rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #1e40af;
}

.info-item {
  margin-bottom: 18rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 22rpx;
  font-weight: 600;
  color: #1e40af;
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.info-value {
  font-size: 24rpx;
  color: #334155;
  line-height: 1.6;
  font-weight: 400;
}

/* 联系方式组 - 商务专业 */
.contact-group {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  margin-bottom: 30rpx;
  background-color: #f8fafc;
  padding: 28rpx;
  border-radius: 8rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 18rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  width: 28rpx;
  height: 28rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  flex-shrink: 0;
}

