.contact-text {
  font-size: 24rpx;
  color: #1e293b;
  font-weight: 500;
}

/* 装饰元素 */
.header-decoration {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(30, 64, 175, 0.06) 0%, transparent 70%);
  z-index: 0;
}

.header-decoration.top-left {
  top: -30rpx;
  left: -30rpx;
}

.header-decoration.bottom-right {
  bottom: -30rpx;
  right: -30rpx;
  background: radial-gradient(circle, rgba(30, 64, 175, 0.06) 0%, transparent 70%);
}

/* 分隔线样式 - 商务专业 */
.divider {
  height: 2rpx;
  background-color: #e2e8f0;
  margin: 44rpx 0;
}

/* 各部分标题容器样式 - 商务专业 */
.section {
  margin-bottom: 44rpx;
}

/* 部分标题样式 - 商务专业 */
.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 28rpx;
  padding-bottom: 14rpx;
  border-bottom: 2rpx solid #1e40af;
  text-transform: uppercase;
  letter-spacing: 1.5rpx;
}

/* 经历项目样式 - 商务专业 */
.experience-item {
  margin-bottom: 36rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #e2e8f0;
}

.experience-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

/* 工作经历头部样式 - 商务专业 */
.experience-header,
.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 14rpx;
  flex-wrap: wrap;
}

/* 公司名称样式 - 商务专业 */
.company,
.experience-company {
  font-size: 26rpx;
  font-weight: 700;
  color: #1e40af;
  margin-right: 16rpx;
}

/* 职位样式 - 商务专业 */
.position,
.experience-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 10rpx;
}

/* 时间样式 - 商务专业 */
.time,
.experience-date {
  font-size: 22rpx;
  color: #64748b;
  font-weight: 500;
  background-color: #f8fafc;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 工作职责样式 - 商务专业 */
.job-duties,
.experience-description {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding-left: 28rpx;
}

/* 工作职责文本样式 - 商务专业 */
.job-duties text,
.experience-description text {
  font-size: 24rpx;
  color: #334155;
  line-height: 1.7;
  position: relative;
}

.job-duties text::before,
.experience-description text::before {
  content: '•';
  position: absolute;
  left: -28rpx;
  color: #1e40af;
  font-weight: bold;
}

/* 技能特长容器样式 - 商务专业 */
.skills {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 单个技能项样式 - 商务专业 */
.skill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}

.skill-item:last-child {
  border-bottom: none;
}

.skill-item:active {
  background-color: #f8fafc;
}

.skill-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #334155;
}

.skill-level {
  font-size: 22rpx;
  color: #64748b;
}

.skill-proficiency {
  font-size: 22rpx;
  color: #1e40af;
  font-weight: 600;
  background-color: #f0f9ff;
  padding: 8rpx 18rpx;
  border-radius: 16rpx;
}

/* 兴趣爱好样式 - 商务专业 */
.hobby {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
  padding: 8rpx 0;
}

.hobby text {
  font-size: 22rpx;
  color: #334155;
  background-color: #f8fafc;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e2e8f0;
  font-weight: 500;
  transition: all 0.2s ease;
}

.hobby text:active {
    background-color: #f1f5f9;
    transform: translateY(1rpx);
  }