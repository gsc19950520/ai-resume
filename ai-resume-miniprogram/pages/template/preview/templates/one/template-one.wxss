.resume-page {
  width: 400rpx;
  min-height: 507rpx;
  background: #f9f9fb;
  border-radius: 24rpx;
  overflow: hidden;
  font-family: 'PingFang SC', sans-serif;
  color: #1a1a1a;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.1);
  padding-bottom: 40rpx;
  transition: all 0.3s ease;
}

/* 顶部信息区 - 深蓝色主题增强版 */
.header {
  background: linear-gradient(135deg, #0a192f, #102542);
  color: #fff;
  display: flex;
  padding: 45rpx 35rpx;
  align-items: center;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  position: relative;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.25);
  background-color: #0a192f;
}

.header::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 80% 20%, rgba(61, 4, 194, 0.25) 0%, transparent 100%);
  z-index: 0;
}

.avatar-container {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 35rpx;
  flex-shrink: 0;
  border: 5rpx solid #21a9e9;
  box-shadow: 0 6rpx 16rpx rgba(235, 221, 221, 0.3);
  background: #010711;
  padding: 4rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
  transition: transform 0.3s ease;
}

.avatar-container:active .avatar {
  transform: scale(1.05);
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 1;
  flex: 1;
}

.name {
  font-size: 44rpx;
  font-weight: 700;
  color: #5dc6f5;
  margin-bottom: 8rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.4);
  letter-spacing: 1rpx;
  position: relative;
  display: inline-block;
}

.name::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 0;
  width: 0;
  height: 3rpx;
  background: #53bef0;
  transition: width 0.5s ease;
}

.header:active .name::after {
  width: 100%;
}

.meta {
  font-size: 28rpx;
  color: #070707;
  margin-bottom: 10rpx;
  font-weight: 400;
  letter-spacing: 0.5rpx;
}

.contact {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx 30rpx;
  font-size: 24rpx;
  color: #000000;
}

.contact-item {
  display: flex;
  align-items: center;
  position: relative;
  padding-left: 26rpx;
}

.contact-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 14rpx;
  height: 14rpx;
  background: #5dc6f5;
  border-radius: 50%;
  opacity: 1;
}

.contact-item:active {
  color: #5dc6f5;
  transform: translateX(2rpx);
}

/* 添加精致的装饰元素 */
.header-decoration {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(93, 188, 252, 0.3) 0%, transparent 70%);
  z-index: 0;
}

/* 内容区 */
.section {
  padding: 40rpx;
  background: #fff;
  transition: all 0.3s ease;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.05);
  position: relative;
  overflow: hidden;
}

.section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #101c38, #ffcc33);
  opacity: 0.8;
}

.section:hover {
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.08);
  transform: translateY(-2rpx);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
  color: #101c38;
  border-left: 6rpx solid #ffcc33;
  padding-left: 16rpx;
  position: relative;
  display: inline-block;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 16rpx;
  width: 60%;
  height: 2rpx;
  background: linear-gradient(90deg, #ffcc33, transparent);
}

/* 工作经历样式 - 精致版 */
.experience-item {
  margin-bottom: 36rpx;
  padding-bottom: 36rpx;
  border-bottom: 1rpx dashed #eee;
  position: relative;
  transition: all 0.3s ease;
}

.experience-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.experience-item:hover {
  transform: translateX(4rpx);
}

.job-header {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 12rpx 20rpx;
  margin-bottom: 14rpx;
  position: relative;
}

.company {
  font-size: 30rpx;
  font-weight: 600;
  color: #101c38;
  position: relative;
  display: inline-flex;
  align-items: center;
  padding-right: 24rpx;
}

.company::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ffcc33;
  opacity: 0.8;
}

.position {
  font-size: 28rpx;
  color: #555;
  background: #f9f9f9;
  padding: 4rpx 16rpx;
  border-radius: 14rpx;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: #888;
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.time::before {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #101c38;
  opacity: 0.7;
}

.job-duties {
  font-size: 26rpx;
  line-height: 1.7;
  color: #444;
  padding-left: 20rpx;
  border-left: 2rpx solid rgba(255, 204, 51, 0.4);
}

.job-duties text {
  display: block;
  margin-bottom: 12rpx;
  position: relative;
  padding-left: 30rpx;
}

.job-duties text::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 18rpx;
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background: #ffcc33;
  box-shadow: 0 0 0 4rpx rgba(255, 204, 51, 0.2);
}

.job-duties text:last-child {
  margin-bottom: 0;
}

/* 传统项目样式保持 */
.item {
  margin-bottom: 30rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  flex-wrap: wrap;
}

.date {
  font-size: 24rpx;
  color: #888;
}

.item-content {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #444;
  font-size: 26rpx;
  line-height: 1.7;
}

/* 技能条 */
.skills {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.skill {
  display: flex;
  flex-direction: column;
}

.bar {
  background: #e6e6e6;
  height: 14rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.fill {
  height: 14rpx;
  background: linear-gradient(90deg, #101c38, #ffcc33);
  border-radius: 8rpx;
  transition: width 1s ease-in-out;
}

.fill-80 { width: 80%; }
.fill-70 { width: 70%; }
.fill-60 { width: 60%; }

/* 兴趣 */
.hobby {
  font-size: 28rpx;
  color: #333;
  display: inline-block;
  background: #f0f0f5;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  transition: transform 0.3s ease;
}

.hobby:hover {
  transform: translateY(-2rpx);
}
