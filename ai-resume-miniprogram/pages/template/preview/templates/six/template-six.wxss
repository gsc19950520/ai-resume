/* WXSS代码 - template-six 简历模板样式 - 极简主义 */

/* 容器样式 - 极简主义 */
.container {
  padding: 0;
  background-color: #f8f9fa;
  height: 100vh;
  width: 100%;
  overflow: hidden;
  position: relative;
  margin: 0;
}

/* 简历主体样式 - 极简主义 */
.resume {
  background-color: #ffffff;
  padding: 40rpx;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #333333;
  line-height: 1.6;
  max-width: 1000rpx;
  margin: 0 auto;
  width: 100%;
  border-radius: 0;
  box-shadow: none;
}

/* 头部信息样式 - 极简主义 */
.header {
  margin-bottom: 48rpx;
  text-align: center;
  border-bottom: 1rpx solid #e0e0e0;
  padding-bottom: 32rpx;
}

/* 左右布局 - 极简主义 */
.header-left,
.header-right {
  width: 100%;
}

/* 姓名卡片 - 极简主义 */
.name-card {
  margin-bottom: 24rpx;
}

.name {
  font-size: 48rpx;
  font-weight: 300;
  color: #333333;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
  text-transform: uppercase;
}

.position-title {
  font-size: 26rpx;
  color: #666666;
  font-weight: 400;
  letter-spacing: 1rpx;
}

/* 核心标签 - 极简主义 */
.core-tags {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  margin-top: 24rpx;
}

.tag {
  padding: 8rpx 20rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #333333;
  border: 1rpx solid #e0e0e0;
  border-radius: 0;
  background: transparent;
  transition: all 0.2s ease;
}

.tag.primary,
.tag.secondary,
.tag.salary {
  background: transparent;
  border: 1rpx solid #e0e0e0;
  color: #333333;
}

.tag:hover {
  border-color: #333333;
  background: #333333;
  color: #ffffff;
}

/* 信息组 - 极简主义 */
.info-group {
  background: transparent;
  padding: 0;
  border-radius: 0;
  border: none;
  margin-bottom: 32rpx;
}

.info-item {
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
  padding-bottom: 0;
}

.info-label {
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.info-value {
  font-size: 24rpx;
  color: #333333;
  line-height: 1.5;
}

/* 联系方式组 - 极简主义 */
.contact-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 0;
  background: transparent;
  border-radius: 0;
  border: none;
  transition: all 0.2s ease;
}

.contact-item:hover {
  background: transparent;
  transform: none;
}

.contact-icon {
  width: 28rpx;
  height: 28rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  flex-shrink: 0;
}

