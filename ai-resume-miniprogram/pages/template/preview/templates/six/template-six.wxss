.contact-text {
  font-size: 22rpx;
  color: #333333;
  font-weight: 400;
}

/* 分隔线样式 - 极简主义 */
.divider {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 40rpx 0;
}

/* 各部分标题容器样式 - 极简主义 */
.section {
  margin-bottom: 48rpx;
}

/* 部分标题样式 - 极简主义 */
.section-title {
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  margin-bottom: 24rpx;
  padding-bottom: 12rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

/* 经历项目样式 - 极简主义 */
.experience-item {
  margin-bottom: 40rpx;
  padding: 0;
  border: none;
  background: transparent;
}

/* 工作经历头部样式 - 极简主义 */
.job-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

/* 公司名称样式 - 极简主义 */
.company {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
}

/* 职位样式 - 极简主义 */
.position {
  font-size: 22rpx;
  color: #666666;
  font-weight: 400;
}

/* 时间样式 - 极简主义 */
.time {
  font-size: 20rpx;
  color: #999999;
  font-weight: 400;
}

/* 工作职责样式 - 极简主义 */
.job-duties {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 工作职责文本样式 - 极简主义 */
.job-duties text {
  font-size: 22rpx;
  color: #333333;
  line-height: 1.5;
  word-break: break-all;
  padding-left: 16rpx;
}

/* 技能特长容器样式 - 极简主义 */
.skills {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 单个技能项样式 - 极简主义 */
.skill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.skill-item:last-child {
  border-bottom: none;
}

/* 技能名称、等级和熟练度样式 - 极简主义 */
.skill-name {
  font-size: 22rpx;
  color: #333333;
  font-weight: 400;
}

.skill-level,
.skill-proficiency {
  font-size: 20rpx;
  color: #666666;
  font-weight: 400;
}

/* 兴趣爱好样式 - 极简主义 */
.hobby {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hobby text {
  font-size: 22rpx;
  color: #333333;
  padding: 8rpx 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 0;
}