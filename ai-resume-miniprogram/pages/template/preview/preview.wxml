<!-- preview.wxml -->
<view class="container">
  <!-- 模板预览区域 -->
  <view class="preview-container">
    <!-- 简历预览卡片-->
    <view class="resume-preview">
      <view class="resume-card {{template.styleClass || 'template-professional'}}">
      <!-- 引用外部模板 -->
      <import src="./templates/two/template-two.wxml"/>
      <import src="./templates/one/template-one.wxml"/>
      
      <block wx:if="{{template.layout.type === 'enhancedTwoColumn' || template.id === 'basic'}}">
        <template is="template-two" data="{{resumeData}}"/>
      </block>
      
      <block wx:elif="{{template.layout.type !== 'enhancedTwoColumn' || template.id === 'technical' || template.id === 'creative' || template.id === 'academic'}}">
        <template is="template-one" data="{{resumeData}}"/>
      </block>
      
      <!-- 默认显示 -->
      <block wx:else>
        <template is="template-two" data="{{resumeData}}"/>
      </block>
      </view>
    </view>
  </view>
  
  <!-- 使用模板按钮 -->
  <view class="action-container">
    <button class="use-template-btn" bindtap="useTemplate">使用此模板</button>
  </view>
</view>