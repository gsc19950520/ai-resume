/* =============================== */
/* 模板二整体样式 */
/* =============================== */
.template-two-container .resume-page {
  width: 110%;
  min-height: 120mm;
  background: #ffffff;
  padding: 25rpx 15rpx;
  box-sizing: border-box;
  transform: scale(0.9);
  transform-origin: top left;
  font-family: "PingFang SC", "Microsoft YaHei", Arial, sans-serif;
  color: #333;
  border-radius: 12rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.08);
}

/* =============================== */
/* 顶部 Header */
/* =============================== */
.template-two-container .header {
  position: relative;
  background: linear-gradient(135deg, #1e73be, #3b8dd9);
  border-radius: 16rpx;
  color: #fff;
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  box-shadow: 0 7rpx 12rpx rgba(30,115,190,0.3);
  overflow: hidden;
}

/* 装饰条 */
.template-two-container .header-deco-strip {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 8rpx;
  background: linear-gradient(90deg, rgba(255,255,255,0.4), rgba(255,255,255,0));
}

/* 背景圆动画 */
.template-two-container .header::before {
  content: "";
  position: absolute;
  right: -60rpx;
  top: -60rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.12);
  animation: pulse 6s infinite ease-in-out;
}
.template-two-container .header::after {
  content: "";
  position: absolute;
  left: -72rpx;
  bottom: -72rpx;
  width: 216rpx;
  height: 216rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.08);
  animation: pulse 8s infinite alternate;
}
@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.2); opacity: 0.8; }
}

/* 头像 */
.template-two-container .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%; /* 圆形 */
  object-fit: cover; /* 保持比例不变 */
  border: 3rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
  flex-shrink: 0; /* 防止被 flex 压缩 */
}

.template-two-container .avatar:hover { transform: scale(1.05); }

/* 信息整体区域右移 30% */
.template-two-container .header-info-box {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  gap: 40rpx;
  transform: translateX(5%);
  position: relative;
  z-index: 1;
}

/* 左列：姓名 + 职位 */
.template-two-container .header-left {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.template-two-container .name-text {
  font-size: 34rpx;
  font-weight: 800;
  letter-spacing: 1.2rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.15);
}
.template-two-container .tag {
  font-size: 19rpx;
  background: rgba(255,255,255,0.18);
  border-radius: 14rpx;
  padding: 3rpx 10rpx;
  margin-top: 10rpx; /* 在姓名下方 */
  font-weight: 500;
  align-self: flex-start; /* 左对齐 */
  min-width: 120rpx; /* ✅ 最小宽度：100rpx，可根据实际调整 */
  white-space: normal; /* ✅ 允许换行 */
  word-break: break-word; /* ✅ 当超过最小宽度才自动换行 */
}

.template-two-container .divider {
  width: 72rpx;
  height: 3.6rpx;
  background: rgba(255,255,255,0.85);
  border-radius: 2rpx;
  margin-top: 8rpx;
}

/* 中间竖线左移 10% */
.template-two-container .header-divider {
  width: 3rpx;
  height: 100rpx;
  background: rgba(255,255,255,0.6);
  border-radius: 2rpx;
  transform: translateX(-10%);
}

.template-two-container .header-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 16rpx;
  line-height: 1.6;
  padding-right: 50rpx; /* ✅ 距离右边框 20rpx */
  word-wrap: break-word; /* ✅ 长内容自动换行 */
}

.template-two-container .contact-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 6rpx;
  flex-wrap: wrap;
}
.template-two-container .icon {
  font-weight: 600;
  min-width: 80rpx; /* 保证label和value对齐 */
}
.template-two-container .contact-value {
  flex: 1;
  word-break: break-all;
  overflow-wrap: break-word;
}

/* =============================== */
/* Section 样式保持不变 */
/* =============================== */
.template-two-container .section { 
  margin-top: 21.6rpx; 
  border-left: 4.8rpx solid #1e73be; 
  padding-left: 12rpx; 
  padding-bottom: 7.2rpx; 
  background: rgba(30,115,190,0.02);
  border-radius: 6rpx;
}
.template-two-container .section-title { 
  font-weight: bold; 
  font-size: 21.6rpx; 
  margin-bottom: 7.2rpx; 
  color: #1e73be;
  position: relative;
}
.template-two-container .section-title::after {
  content: "";
  display: block;
  width: 32rpx;
  height: 3rpx;
  background: #1e73be;
  margin-top: 4rpx;
  border-radius: 2rpx;
}
/* 顶部标题行（公司、职位、时间） */
.template-two-container .job-header {
  font-size: 16rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  justify-content: space-between; /* 三端分布 */
  align-items: center;
  margin-bottom: 15rpx;
  gap: 10rpx;
  flex: 1;
  margin-right: 10%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 公司名（左） */
.template-two-container .job-company {
  text-align: left;
}

/* 职位（中） */
.template-two-container .job-position {
  text-align: center;
}

/* 时间（右） */
.template-two-container .job-period {
  text-align: right;
}
.template-two-container .job-desc { font-size: 16rpx; line-height: 1.4; color:#333; }
.template-two-container .skill-list { display: flex; flex-wrap: wrap; margin-top: 4rpx; }
.template-two-container .skill { 
  display: inline-block; 
  background: #1e73be; 
  color: #fff; 
  border-radius: 6rpx; 
  padding: 2.4rpx 9.6rpx; 
  margin: 1.2rpx; 
  font-size: 16rpx; 
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  transition: transform 0.2s;
}
.template-two-container .skill:hover { transform: scale(1.05); }
.template-two-container .project { margin-bottom: 15rpx; }
.template-two-container .job { margin-bottom: 15rpx; }
