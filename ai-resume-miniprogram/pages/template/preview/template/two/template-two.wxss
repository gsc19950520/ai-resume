/* 模板二样式 - 通过命名空间隔离 */
.template-two-container .resume-page {
  width: 210mm;
  min-height: 297mm;
  background: #ffffff;
  padding: 24rpx;
  box-sizing: border-box;
  transform: scale(0.9);
  transform-origin: top left;
  font-family: "PingFang SC", "Microsoft YaHei", Arial, sans-serif;
  color: #333;
  border-radius: 12rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.08);
}

/* Header 顶部 */
.template-two-container .header {
  position: relative;
  background: linear-gradient(135deg, #1e73be, #3b8dd9);
  border-radius: 16rpx;
  color: #fff;
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  box-shadow: 0 7rpx 12rpx rgba(30,115,190,0.3);
  overflow: hidden;
}
.template-two-container .header::before {
  content: "";
  position: absolute;
  right: -60rpx;
  top: -60rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.12);
  animation: pulse 6s infinite ease-in-out;
}
.template-two-container .header::after {
  content: "";
  position: absolute;
  left: -72rpx;
  bottom: -72rpx;
  width: 216rpx;
  height: 216rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.08);
  animation: pulse 8s infinite alternate;
}
@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.2); opacity: 0.8; }
}

/* 头像 */
.template-two-container .avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  margin-right: 28rpx;
  border: 3rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
  transition: transform 0.3s;
}
.template-two-container .avatar:hover { transform: scale(1.05); }

/* 信息区域 */
.template-two-container .info { flex: 1; position: relative; z-index: 1; }
.template-two-container .name { display: flex; align-items: center; margin-bottom: 10rpx; }
.template-two-container .name-text { font-size: 34rpx; font-weight: 800; letter-spacing: 1.2rpx; text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.15); }
.template-two-container .tag { font-size: 19rpx; background: rgba(255,255,255,0.18); border-radius: 14rpx; padding: 3rpx 10rpx; margin-left: 12rpx; font-weight: 500; }
.template-two-container .divider { width: 72rpx; height: 3.6rpx; background: rgba(255,255,255,0.85); margin-bottom: 10rpx; border-radius: 2rpx; }

/* 联系方式 */
.template-two-container .contact { font-size: 16rpx; line-height: 1.4; margin-top: 6rpx; }
.template-two-container .contact-item { display: flex; align-items: center; margin-bottom: 2.4rpx; }
.template-two-container .icon { margin-right: 6rpx; font-size: 20rpx; }

/* 高亮信息 */
.template-two-container .highlight { 
  margin-top: 10rpx; 
  font-size: 16.8rpx; 
  background: linear-gradient(90deg, rgba(255,255,255,0.15), rgba(255,255,255,0.08)); 
  border-radius: 7rpx; 
  padding: 4.8rpx 9.6rpx; 
  line-height: 1.4;
  box-shadow: inset 0 2rpx 4rpx rgba(255,255,255,0.2);
}

/* Section 区块 */
.template-two-container .section { 
  margin-top: 21.6rpx; 
  border-left: 4.8rpx solid #1e73be; 
  padding-left: 12rpx; 
  padding-bottom: 7.2rpx; 
  background: rgba(30,115,190,0.02);
  border-radius: 6rpx;
}
.template-two-container .section-title { 
  font-weight: bold; 
  font-size: 21.6rpx; 
  margin-bottom: 7.2rpx; 
  color: #1e73be;
  position: relative;
}
.template-two-container .section-title::after {
  content: "";
  display: block;
  width: 32rpx;
  height: 3rpx;
  background: #1e73be;
  margin-top: 4rpx;
  border-radius: 2rpx;
}

/* 工作 / 教育经历 */
.template-two-container .job { margin-bottom: 9.6rpx; }
.template-two-container .job-title { font-weight: bold; font-size: 16.8rpx; color:#1a1a1a; }
.template-two-container .job-period { font-size: 14.4rpx; color: #555; margin-bottom: 2.4rpx; }
.template-two-container .job-desc { font-size: 14.4rpx; line-height: 1.4; color:#333; }

/* 技能 */
.template-two-container .skill-list { display: flex; flex-wrap: wrap; margin-top: 4rpx; }
.template-two-container .skill { 
  display: inline-block; 
  background: #1e73be; 
  color: #fff; 
  border-radius: 6rpx; 
  padding: 2.4rpx 9.6rpx; 
  margin: 1.2rpx; 
  font-size: 13rpx; 
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  transition: transform 0.2s;
}
.template-two-container .skill:hover { transform: scale(1.05); }

/* 项目经验 */
.template-two-container .project { margin-bottom: 9.6rpx; }
