<template name="template-two">
 <view class="resume-page">

  <!-- 顶部 Header -->
  <view class="header">
    <image class="avatar" src="{{resumeData.personalInfo.avatarUrl}}" mode="cover"></image>

    <view class="header-info-box">
      <!-- 左列：姓名、职位 -->
      <view class="header-left">
        <view class="name">
          <text class="name-text">{{resumeData.personalInfo.name}}</text>
        </view>
        <text class="tag">{{resumeData.jobTitle}}</text>
        <view class="divider"></view>
      </view>

      <!-- 中间竖线分隔 -->
      <view class="header-divider"></view>

      <!-- 右列：联系方式 -->
      <view class="header-right">
        <view class="contact-item">
            <text class="icon">手机号：</text>
            <text class="contact-value">{{resumeData.personalInfo.phone || '未填写'}}</text>
          </view>
          <view class="contact-item">
            <text class="icon">邮箱：</text>
            <text class="contact-value">{{resumeData.personalInfo.email || '未填写'}}</text>
          </view>
        <view class="contact-item">
          <text class="icon">地址：</text>
          <text class="contact-value">{{resumeData.personalInfo.address || '未填写'}}</text>
        </view>
        <view class="contact-item">
          <text class="icon">出生日期：</text>
          <text class="contact-value">{{resumeData.personalInfo.birthDate || '未填写'}}</text>
        </view>
        <view class="contact-item">
          <text class="icon">期望薪资：</text>
          <text class="contact-value">{{resumeData.expectedSalary || '未填写'}}</text>
        </view>
        <view class="contact-item">
          <text class="icon">入职时间：</text>
          <text class="contact-value">{{resumeData.startTime || '未填写'}}</text>
        </view>
      </view>
    </view>

    <!-- 装饰条 -->
    <view class="header-deco-strip"></view>
  </view>

  <!-- 教育经历 -->
    <view class="section">
      <view class="section-title">教育经历</view>
      <block wx:if="{{resumeData.educationList && resumeData.educationList.length > 0}}">
      <block wx:for="{{resumeData.educationList}}" wx:key="index">
        <view class="job">
          <view class="job-header">
            <text class="job-company">{{item.school}}</text>
            <text class="job-position">{{item.degree}}</text>
            <text class="job-period">{{item.startDate}} - {{item.endDate}}</text>
          </view>
          <view class="job-desc">{{item.major}}</view>
        </view>
      </block>
    </block>
    <block wx:else>
      <view class="job-desc">暂无教育经历</view>
    </block>
  </view>

  <!-- 工作经历 -->
  <view class="section">
    <view class="section-title">工作经历</view>
    <block wx:if="{{resumeData.workExperienceList && resumeData.workExperienceList.length > 0}}">
      <block wx:for="{{resumeData.workExperienceList}}" wx:key="index">
        <view class="job">
          <view class="job-header">
            <text class="job-company">{{item.companyName}}</text>
            <text class="job-position">{{item.positionName}}</text>
            <text class="job-period">{{item.startDate}} - {{item.endDate}}</text>
          </view>
          <view class="job-desc">{{item.description}}</view>
        </view>
      </block>
    </block>
    <block wx:else>
      <view class="job-desc">暂无工作经历</view>
    </block>
  </view>

  <!-- 项目经验 -->
  <view class="section">
    <view class="section-title">项目经验</view>
    <block wx:if="{{resumeData.projectList && resumeData.projectList.length > 0}}">
      <block wx:for="{{resumeData.projectList}}" wx:key="index">
        <view class="project">
          <view class="job-header">
            <view class="job-position">{{item.projectName}}</view>
            <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
          </view>
          <view class="job-desc">{{item.description}}</view>
        </view>
      </block>
    </block>
    <block wx:else>
      <view class="job-desc">暂无项目经验</view>
    </block>
  </view>

  <!-- 技能 -->
  <view class="section">
    <view class="section-title">技能</view>
    <block wx:if="{{resumeData.skillList && resumeData.skillList.length > 0}}">
        <view class="skill-list">
          <block wx:for="{{resumeData.skillList}}" wx:key="index">
            <view class="skill">{{item.name}}</view>
          </block>
        </view>
      </block>
      <block wx:else>
        <view class="job-desc">暂无技能信息</view>
      </block>
  </view>

  <!-- 兴趣爱好 -->
  <view class="section">
    <view class="section-title">兴趣爱好</view>
    <block wx:if="{{resumeData.interests}}">
      <view class="job-desc">{{resumeData.interests}}</view>
    </block>
    <block wx:else>
      <view class="job-desc">暂无兴趣爱好信息</view>
    </block>
  </view>

  <!-- 自我评价 -->
  <view class="section">
    <view class="section-title">自我评价</view>
    <block wx:if="{{resumeData.selfEvaluation}}">
      <view class="job-desc">{{resumeData.selfEvaluation}}</view>
    </block>
    <block wx:else>
      <view class="job-desc">暂无自我评价</view>
    </block>
  </view>

</view>
</template>
