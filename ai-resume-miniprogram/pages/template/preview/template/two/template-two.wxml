<template name="template-two">
 <view class="resume-page">

  <!-- 顶部 Header -->
  <view class="header">
    <image class="avatar" src="{{resumeData.personalInfo.avatar || resumeData.avatar || '/images/avatar.jpg'}}" mode="cover"></image>

    <view class="header-info-box">
      <!-- 左列：姓名、职位 -->
      <view class="header-left">
        <view class="name">
          <text class="name-text">{{userInfo.name || resumeData.name || '姓名'}}</text>
        </view>
        <text class="tag">{{resumeData.personalInfo.jobTitle || resumeData.personalInfo.position || resumeData.title || '职位'}}</text>
        <view class="divider"></view>
      </view>

      <!-- 中间竖线分隔 -->
      <view class="header-divider"></view>

      <!-- 右列：联系方式 -->
      <view class="header-right">
        <view class="contact-item">
            <text class="icon">手机号：</text>
            <text class="contact-value">{{userInfo.phone || resumeData.personalInfo.phone || resumeData.contact.phone || '未填写'}}</text>
          </view>
          <view class="contact-item">
            <text class="icon">邮箱：</text>
            <text class="contact-value">{{userInfo.email || resumeData.personalInfo.email || resumeData.contact.email || '未填写'}}</text>
          </view>
        <view class="contact-item">
          <text class="icon">地址：</text>
          <text class="contact-value">{{userInfo.address || resumeData.personalInfo.address || resumeData.contact.address || '未填写'}}</text>
        </view>
        <view class="contact-item">
          <text class="icon">出生日期：</text>
          <text class="contact-value">{{userInfo.birthDate || resumeData.personalInfo.birthDate || resumeData.birth || '未填写'}}</text>
        </view>
        <view class="contact-item">
          <text class="icon">期望薪资：</text>
          <text class="contact-value">{{resumeData.personalInfo.expectedSalary || resumeData.salary || '未填写'}}</text>
        </view>
        <view class="contact-item">
          <text class="icon">入职时间：</text>
          <text class="contact-value">{{resumeData.personalInfo.startTime || resumeData.entryTime || '未填写'}}</text>
        </view>
      </view>
    </view>

    <!-- 装饰条 -->
    <view class="header-deco-strip"></view>
  </view>

  <!-- 教育经历 -->
    <view class="section">
      <view class="section-title">教育经历</view>
      <block wx:if="{{resumeData.education && resumeData.education.length > 0}}">
      <block wx:for="{{resumeData.education}}" wx:key="index">
        <view class="job">
          <view class="job-header">
            <text class="job-company">{{item.school || item.schoolName || '学校名称'}}</text>
            <text class="job-position">{{item.degree || '学历'}}</text>
            <text class="job-period">{{item.startDate || item.startTime || ''}} - {{item.endDate || item.endTime || '至今'}}</text>
          </view>
          <view class="job-desc">{{item.major || item.description || '专业描述'}}</view>
        </view>
      </block>
    </block>
    <block wx:else>
      <view class="job-desc">暂无教育经历</view>
    </block>
  </view>

  <!-- 工作经历 -->
  <view class="section">
    <view class="section-title">工作经历</view>
    <block wx:if="{{resumeData.workExperience && resumeData.workExperience.length > 0}}">
      <block wx:for="{{resumeData.workExperience}}" wx:key="index">
        <view class="job">
          <view class="job-header">
            <text class="job-company">{{item.company || item.companyName || '公司名称'}}</text>
            <text class="job-position">{{item.position || item.jobTitle || '职位'}}</text>
            <text class="job-period">{{item.startDate || item.startTime || ''}} - {{item.endDate || item.endTime || '至今'}}</text>
          </view>
          <view class="job-desc">{{item.description || item.workContent || '工作描述'}}</view>
        </view>
      </block>
    </block>
    <block wx:elif="{{resumeData.workExperienceList && resumeData.workExperienceList.length > 0}}">
      <block wx:for="{{resumeData.workExperienceList}}" wx:key="index">
        <view class="job">
          <view class="job-header">
            <text class="job-company">{{item.company || item.companyName || '公司名称'}}</text>
            <text class="job-position">{{item.position || item.jobTitle || '职位'}}</text>
            <text class="job-period">{{item.startDate || item.startTime || ''}} - {{item.endDate || item.endTime || '至今'}}</text>
          </view>
          <view class="job-desc">{{item.description || item.workContent || '工作描述'}}</view>
        </view>
      </block>
    </block>
    <block wx:else>
      <view class="job-desc">暂无工作经历</view>
    </block>
  </view>

  <!-- 项目经验 -->
  <view class="section">
    <view class="section-title">项目经验</view>
    <block wx:if="{{resumeData.projects && resumeData.projects.length > 0}}">
      <block wx:for="{{resumeData.projects}}" wx:key="index">
        <view class="project">
          <view class="job-header">
            <view class="job-position">{{item.name || item.projectName || '项目名称'}}</view>
            <view class="job-period">{{item.startDate || item.startTime || ''}} - {{item.endDate || item.endTime || '至今'}}</view>
          </view>
          <view class="job-desc">{{item.description || '项目描述'}}</view>
        </view>
      </block>
    </block>
    <block wx:elif="{{resumeData.projectExperienceList && resumeData.projectExperienceList.length > 0}}">
      <block wx:for="{{resumeData.projectExperienceList}}" wx:key="index">
        <view class="project">
          <view class="job-header">
            <view class="job-position">{{item.name || item.projectName || '项目名称'}}</view>
            <view class="job-period">{{item.startDate || item.startTime || ''}} - {{item.endDate || item.endTime || '至今'}}</view>
          </view>
          <view class="job-desc">{{item.description || '项目描述'}}</view>
        </view>
      </block>
    </block>
    <block wx:else>
      <view class="job-desc">暂无项目经验</view>
    </block>
  </view>

  <!-- 技能 -->
  <view class="section">
    <view class="section-title">技能</view>
      <block wx:if="{{resumeData.skillsWithLevel && resumeData.skillsWithLevel.length > 0}}">
        <view class="skill-list">
          <block wx:for="{{resumeData.skillsWithLevel}}" wx:key="index">
            <view class="skill">{{item.name || item || '技能'}}</view>
          </block>
        </view>
      </block>
      <block wx:else>
        <view class="job-desc">暂无技能信息</view>
      </block>
  </view>

  <view class="section">
    <view class="section-title">兴趣爱好</view>
    <view class="job-desc">{{resumeData.personalInfo.interests || resumeData.selfEvaluation || '暂无兴趣爱好信息'}}</view>
  </view>
    
  <!-- 自我评价 -->
  <view class="section">
    <view class="section-title">自我评价</view>
    <view class="job-desc">{{resumeData.personalInfo.selfEvaluation || resumeData.selfEvaluation || '暂无自我评价'}}</view>
  </view>

</view>
</template>
