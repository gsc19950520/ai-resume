<template name="template-six">
  <view class="resume-six-container">

    <!-- 顶部横幅 -->
    <view class="header-banner">
      <view class="header-content">
        <image class="avatar" src="{{resumeData.personalInfo.avatar || '/images/avatar.jpg'}}" mode="cover"></image>

        <view class="name-box">
          <text class="name-text">{{resumeData.personalInfo.name || '请输入姓名'}}</text>
          <text class="tag">{{resumeData.personalInfo.position || '请输入职位'}}</text>
        </view>

        <!-- 顶部联系方式 -->
        <view class="contact-top">
          <view class="contact-row">
            <text class="contact-item">电话：{{resumeData.contact.phone || '请输入电话'}}</text>
          </view>
          <view class="contact-row"><text class="contact-item">邮箱：{{resumeData.contact.email || '请输入邮箱'}}</text></view>
          <view class="contact-row"><text class="contact-item">地址：{{resumeData.contact.address || '请输入地址'}}</text></view>
          <view class="contact-row"><text class="contact-item">出生日期：{{resumeData.personalInfo.birthDate || '请输入出生日期'}}</text></view>
            <view class="contact-row"><text class="contact-item">期望薪资：{{resumeData.personalInfo.expectedSalary || '请输入期望薪资'}}</text></view>
          <view class="contact-row"><text class="contact-item">到岗：{{resumeData.personalInfo.startDate || '请输入到岗时间'}}</text></view>
        </view>
      </view>
    </view>

    <!-- 主体内容 -->
    <view class="main-content-six">

      <!-- 左侧：技能 -->
      <view class="left-panel-six">
        <view class="section">
          <view class="section-title">专业技能</view>
          <block wx:if="{{resumeData.skills && resumeData.skills.length > 0}}">
            <view wx:for="{{resumeData.skills}}" wx:key="index" class="skill-item">
              <text class="skill-name">{{item.name || '未命名技能'}}</text>
              <view class="skill-bar"><view class="skill-fill" style="width:{{item.level || 50}}%;"></view></view>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <text>请添加专业技能</text>
          </view>
        </view>
      </view>

      <!-- 右侧：时间轴内容 -->
      <view class="right-panel-six">

        <!-- 教育经历 -->
        <view class="timeline-section">
          <view class="section-title">教育经历</view>
          <block wx:if="{{resumeData.education && resumeData.education.length > 0}}">
            <view wx:for="{{resumeData.education}}" wx:key="index" class="timeline-item">
              <view class="timeline-dot"></view>
              <view class="timeline-content">
                <view class="job-header">
                  <view class="job-period">{{item.startDate || ''}} - {{item.endDate || '至今'}}</view>
                  <view class="job-school">{{item.school || '未填写学校'}}</view>
                  <view class="job-position">{{item.degree || '未填写学历'}}</view>
                </view>
                <view class="job-desc">{{item.major || '未填写专业'}}{{item.description ? '，' + item.description : ''}}</view>
              </view>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <view class="timeline-item">
              <view class="timeline-content">
                <view class="job-desc">请添加教育经历</view>
              </view>
            </view>
          </view>
        </view>

        <!-- 工作经历 -->
        <view class="timeline-section">
          <view class="section-title">工作经历</view>
          <block wx:if="{{resumeData.work && resumeData.work.length > 0}}">
            <view wx:for="{{resumeData.work}}" wx:key="index" class="timeline-item">
              <view class="timeline-dot"></view>
              <view class="timeline-content">
                <view class="job-header">
                  <view class="job-period">{{item.startDate || ''}} - {{item.endDate || '至今'}}</view>
                  <view class="job-company">{{item.company || '未填写公司'}}</view>
                  <view class="job-position">{{item.position || '未填写职位'}}</view>
                </view>
                <view class="job-desc">{{item.description || '未填写工作描述'}}</view>
              </view>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <view class="timeline-item">
              <view class="timeline-content">
                <view class="job-desc">请添加工作经历</view>
              </view>
            </view>
          </view>
        </view>

        <!-- 项目经验 -->
        <view class="timeline-section">
          <view class="section-title">项目经验</view>
          <block wx:if="{{resumeData.projects && resumeData.projects.length > 0}}">
            <view wx:for="{{resumeData.projects}}" wx:key="index" class="timeline-item">
              <view class="timeline-dot"></view>
              <view class="timeline-content">
                <view class="job-header">
                  <view class="job-period">{{item.startDate || ''}} - {{item.endDate || '至今'}}</view>
                  <view class="job-project">{{item.name || '未填写项目名称'}}</view>
                </view>
                <view class="job-desc">{{item.description || '未填写项目描述'}}</view>
              </view>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <view class="timeline-item">
              <view class="timeline-content">
                <view class="job-desc">请添加项目经验</view>
              </view>
            </view>
          </view>
        </view>

        <!-- 自我评价 -->
        <view class="timeline-section">
          <view class="section-title">自我评价</view>
          <view class="timeline-item">
            <view class="timeline-content">
              <view class="job-desc">{{resumeData.summary || '请添加自我评价'}}</view>
            </view>
          </view>
        </view>

      </view>

    </view>

  </view>
</template>
