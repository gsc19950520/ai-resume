<template name="template-six">
  <view class="resume-six-container">

    <!-- 顶部横幅 -->
    <view class="header-banner">
      <view class="header-content">
        <image class="avatar" src="{{resumeData.personalInfo.avatarUrl}}" mode="cover"></image>

        <view class="name-box">
          <text class="name-text">{{resumeData.personalInfo.name}}</text>
          <text class="tag">{{resumeData.jobTitle}}</text>
        </view>

        <!-- 顶部联系方式 -->
        <view class="contact-top">
          <view class="contact-row">
            <text class="contact-item">电话：{{resumeData.personalInfo.phone || '请输入电话'}}</text>
          </view>
          <view class="contact-row"><text class="contact-item">邮箱：{{resumeData.personalInfo.email || '请输入邮箱'}}</text></view>
          <view class="contact-row"><text class="contact-item">地址：{{resumeData.personalInfo.address || '请输入地址'}}</text></view>
          <view class="contact-row"><text class="contact-item">出生日期：{{resumeData.personalInfo.birthDate || '请输入出生日期'}}</text></view>
            <view class="contact-row"><text class="contact-item">期望薪资：{{resumeData.expectedSalary || '请输入期望薪资'}}</text></view>
          <view class="contact-row"><text class="contact-item">到岗：{{resumeData.startTime || '请输入到岗时间'}}</text></view>
        </view>
      </view>
    </view>

    <!-- 主体内容 -->
    <view class="main-content-six">

      <!-- 左侧：技能和兴趣爱好 -->
      <view class="left-panel-six">
        <view class="section">
          <view class="section-title">专业技能</view>
          <block wx:if="{{resumeData.skillList && resumeData.skillList.length > 0}}">
            <view wx:for="{{resumeData.skillList}}" wx:key="index" class="skill-item">
              <text class="skill-name">{{item.name}}</text>
              <view class="skill-bar"><view class="skill-fill" style="width:{{item.level * 20}}%;"></view></view>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <text>请添加专业技能</text>
          </view>
        </view>

        <!-- 兴趣爱好 -->
        <view class="section">
          <view class="section-title">兴趣爱好</view>
          <block wx:if="{{resumeData.interests}}">
            <view class="hobbies-list">
              <text class="hobby-item">{{resumeData.interests}}</text>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <text></text>
          </view>
        </view>
      </view>

      <!-- 右侧：时间轴内容 -->
      <view class="right-panel-six">

        <!-- 教育经历 -->
        <view class="timeline-section">
          <view class="section-title">教育经历</view>
          <block wx:if="{{resumeData.educationList && resumeData.educationList.length > 0}}">
            <view wx:for="{{resumeData.educationList}}" wx:key="index" class="timeline-item">
              <view class="timeline-dot"></view>
              <view class="timeline-content">
                <view class="job-header">
                  <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
                  <view class="job-school">{{item.school}}</view>
                  <view class="job-position">{{item.degree}}</view>
                </view>
                <view class="job-desc">{{item.major}}</view>
              </view>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <view class="timeline-item">
              <view class="timeline-content">
                <view class="job-desc">请添加教育经历</view>
              </view>
            </view>
          </view>
        </view>

        <!-- 工作经历 -->
        <view class="timeline-section">
          <view class="section-title">工作经历</view>
          <block wx:if="{{resumeData.workExperienceList && resumeData.workExperienceList.length > 0}}">
            <view wx:for="{{resumeData.workExperienceList}}" wx:key="index" class="timeline-item">
              <view class="timeline-dot"></view>
              <view class="timeline-content">
                <view class="job-header">
                  <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
                  <view class="job-company">{{item.companyName}}</view>
                  <view class="job-position">{{item.positionName}}</view>
                </view>
                <view class="job-desc">{{item.description}}</view>
              </view>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <view class="timeline-item">
              <view class="timeline-content">
                <view class="job-desc">请添加工作经历</view>
              </view>
            </view>
          </view>
        </view>

        <!-- 项目经验 -->
        <view class="timeline-section">
          <view class="section-title">项目经验</view>
          <block wx:if="{{resumeData.projectList && resumeData.projectList.length > 0}}">
            <view wx:for="{{resumeData.projectList}}" wx:key="index" class="timeline-item">
              <view class="timeline-dot"></view>
              <view class="timeline-content">
                <view class="job-header">
                  <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
                  <view class="job-project">{{item.projectName}}</view>
                </view>
                <view class="job-desc">{{item.description}}</view>
              </view>
            </view>
          </block>
          <view wx:else class="empty-tip">
            <view class="timeline-item">
              <view class="timeline-content">
                <view class="job-desc">请添加项目经验</view>
              </view>
            </view>
          </view>
        </view>

        <!-- 自我评价 -->
        <view class="timeline-section">
          <view class="section-title">自我评价</view>
          <view class="timeline-item">
            <view class="timeline-content">
              <view class="job-desc">{{resumeData.selfEvaluation || '请添加自我评价'}}</view>
            </view>
          </view>
        </view>

      </view>

    </view>

  </view>
</template>
