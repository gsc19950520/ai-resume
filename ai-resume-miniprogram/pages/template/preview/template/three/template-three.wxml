<template name="template-three">
 <scroll-view scroll-y="true" style="height:100vh; background:#eceff4;">
  <view class="resume-page">
    <!-- 顶部 Header -->
    <view class="header">
      <image class="avatar" src="{{resumeData.personalInfo.avatarUrl}}" mode="aspectFill"></image>
      <view class="info">
        <view class="name">
          <view class="name-text">{{resumeData.personalInfo.name}}</view>
          <view class="tag">{{resumeData.jobTitle}}</view>
        </view>
        <view class="contact">
          <!-- 第一行 -->
          <view class="contact-row">
            <view class="contact-item"><view class="icon">电话：</view><view>{{resumeData.personalInfo.phone || '未填写'}}</view></view>
            <view class="divider">|</view>
            <view class="contact-item"><view class="icon">邮箱：</view><view>{{resumeData.personalInfo.email || '未填写'}}</view></view>
            <view class="divider">|</view>
            <view class="contact-item"><view class="icon">地址：</view><view>{{resumeData.personalInfo.address || '未填写'}}</view></view>
          </view>

          <!-- 第二行 -->
          <view class="contact-row">
            <view class="contact-item"><view class="icon">出生日期：</view><view>{{resumeData.personalInfo.birthDate || '未填写'}}</view></view>
            <view class="divider">|</view>
            <view class="contact-item"><view class="icon">期望薪资：</view><view>{{resumeData.expectedSalary || '未填写'}}</view></view>
            <view class="divider">|</view>
            <view class="contact-item"><view class="icon">到岗时间：</view><view>{{resumeData.startTime || '未填写'}}</view></view>
          </view>
        </view>
      </view>
    </view>

    <!-- 教育经历 -->
    <view class="section">
      <view class="section-title">教育经历</view>
      <block wx:if="{{resumeData.educationList && resumeData.educationList.length > 0}}">
        <block wx:for="{{resumeData.educationList}}" wx:key="index">
          <view class="job">
            <view class="job-header">
              <view class="job-company">{{item.school}}</view>
              <view class="job-position">{{item.degree}}</view>
              <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
            </view>
            <view class="job-desc">{{item.major}}</view>
          </view>
        </block>
      </block>
      <block wx:else>
        <view class="job-desc">暂无教育经历</view>
      </block>
    </view>

    <!-- 工作经历 -->
    <view class="section">
      <view class="section-title">工作经历</view>
      <block wx:if="{{resumeData.workExperienceList && resumeData.workExperienceList.length > 0}}">
        <block wx:for="{{resumeData.workExperienceList}}" wx:key="index">
          <view class="job">
            <view class="job-header">
              <view class="job-company">{{item.companyName}}</view>
              <view class="job-position">{{item.positionName}}</view>
              <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
            </view>
            <view class="job-desc">{{item.description}}</view>
          </view>
        </block>
      </block>
      <block wx:else>
        <view class="job-desc">暂无工作经历</view>
      </block>
    </view>

    <!-- 项目经验 -->
    <view class="section">
      <view class="section-title">项目经验</view>
      <block wx:if="{{resumeData.projectList && resumeData.projectList.length > 0}}">
        <block wx:for="{{resumeData.projectList}}" wx:key="index">
          <view class="project">
            <view class="job-header">
              <view class="job-company">{{item.projectName}}</view>
              <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
            </view>
            <view class="job-desc">{{item.description}}</view>
          </view>
        </block>
      </block>
      <block wx:else>
        <view class="job-desc">暂无项目经验</view>
      </block>
    </view>

    <!-- 技能 -->
    <view class="section">
      <view class="section-title">技能</view>
      <block wx:if="{{resumeData.skillList && resumeData.skillList.length > 0}}">
        <view class="skill-list">
          <block wx:for="{{resumeData.skillList}}" wx:key="index">
            <view class="skill">{{item.name}}</view>
          </block>
        </view>
      </block>
      <block wx:else>
        <view class="job-desc">暂无技能信息</view>
      </block>
    </view>

    <view class="section">
      <view class="section-title">兴趣爱好</view>
      <block wx:if="{{resumeData.interests}}">
        <view class="job-desc">{{resumeData.interests}}</view>
      </block>
      <block wx:else>
        <view class="job-desc">暂无兴趣爱好信息</view>
      </block>
    </view>

    <!-- 自我评价 -->
    <view class="section">
      <view class="section-title">自我评价</view>
      <block wx:if="{{resumeData.selfEvaluation}}">
        <view class="job-desc">{{resumeData.selfEvaluation}}</view>
      </block>
      <block wx:else>
        <view class="job-desc">暂无自我评价</view>
      </block>
    </view>
  </view>
</scroll-view>

</template>