<template name="template-four">
  <view class="template-four-container">
  <!-- 左侧栏：个人信息+技能 -->
  <view class="left-panel">
    <view class="avatar-container">
      <image class="avatar" src="{{resumeData.personalInfo.avatar || resumeData.avatar || '/images/avatar.jpg'}}" mode="cover" />
      <view class="name">{{resumeData.personalInfo.name || resumeData.name || '姓名'}}</view>
      <view class="title">{{resumeData.personalInfo.jobTitle || resumeData.title || '职位'}}</view>
    </view>

    <!-- 联系方式 -->
<view class="contact-section">
  <view class="section-title">个人信息</view>
  <view class="contact-item">
    <text class="contact-label">电话：</text><text class="contact-value">{{resumeData.personalInfo.phone || resumeData.phone || '请填写电话'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">邮箱：</text><text class="contact-value" decode="true">{{resumeData.personalInfo.email || resumeData.email || '请填写邮箱'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">地址：</text><text class="contact-value">{{resumeData.personalInfo.address || resumeData.address || '请填写地址'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">出生日期：</text><text class="contact-value">{{resumeData.personalInfo.birthDate || resumeData.birth || '请填写出生日期'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">期望薪资：</text><text class="contact-value">{{resumeData.personalInfo.expectedSalary || resumeData.salary || '请填写期望薪资'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">入职时间：</text><text class="contact-value">{{resumeData.personalInfo.startTime || resumeData.entryTime || '请填写入职时间'}}</text>
  </view>
</view>


    <!-- 技能进度条 -->
    <view class="skills-section">
      <view class="section-title">专业技能</view>
      <block wx:if="{{resumeData.skillsWithLevel && resumeData.skillsWithLevel.length > 0}}">
        <view wx:for="{{resumeData.skillsWithLevel}}" wx:key="index" class="skill-item">
          <view class="skill-name">{{item.name || item || '技能名称'}}</view>
          <view class="skill-bar"><view class="skill-fill" style="width:{{item.level * 20}}%;"></view></view>
        </view>
      </block>
      <block wx:else>
        <view class="skill-item">
          <view class="skill-name">技能名称</view>
          <view class="skill-bar">
            <view class="skill-fill" style="width:80%;"></view>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- 右侧栏：教育 / 工作 / 项目 / 自我评价 -->
  <view class="right-panel">
    <!-- 教育经历 -->
    <view class="section">
      <view class="section-title">教育经历</view>
      <block wx:if="{{resumeData.education && resumeData.education.length > 0}}">
        <view wx:for="{{resumeData.education}}" wx:key="index" class="job">
          <view class="job-header">
            <view class="job-company">{{item.school || item.schoolName || '学校名称'}}</view>
            <view class="job-position">{{item.degree || '学历'}}</view>
            <view class="job-period">{{item.startDate || item.startTime || '开始日期'}} - {{item.endDate || item.endTime || '结束日期'}}</view>
          </view>
          <view class="job-desc">{{item.major || item.description || '专业描述'}}</view>
        </view>
      </block>
      <block wx:elif="{{resumeData.educations && resumeData.educations.length > 0}}">
        <view wx:for="{{resumeData.educations}}" wx:key="index" class="job">
          <view class="job-header">
            <view class="job-company">{{item.school || item.schoolName || '学校名称'}}</view>
            <view class="job-position">{{item.degree || '学历'}}</view>
            <view class="job-period">{{item.startDate || item.startTime || '开始日期'}} - {{item.endDate || item.endTime || '结束日期'}}</view>
          </view>
          <view class="job-desc">{{item.major || item.description || '专业描述'}}</view>
        </view>
      </block>
      <block wx:else>
        <view class="job">
          <view class="job-header">
            <view class="job-company">学校名称</view>
            <view class="job-position">学历</view>
            <view class="job-period">开始日期 - 结束日期</view>
          </view>
          <view class="job-desc">专业描述</view>
        </view>
      </block>
    </view>

    <!-- 工作经历 -->
    <view class="section">
      <view class="section-title">工作经历</view>
      <block wx:if="{{resumeData.workExperience && resumeData.workExperience.length > 0}}">
        <view wx:for="{{resumeData.workExperience}}" wx:key="index" class="job">
          <view class="job-header">
            <view class="job-company">{{item.company || item.companyName || '公司名称'}}</view>
            <view class="job-position">{{item.position || item.jobTitle || '职位'}}</view>
            <view class="job-period">{{item.startDate || item.startTime || '开始日期'}} - {{item.endDate || item.endTime || '结束日期'}}</view>
          </view>
          <view class="job-desc">{{item.description || item.workContent || '工作描述'}}</view>
        </view>
      </block>
      <block wx:elif="{{resumeData.workExperiences && resumeData.workExperiences.length > 0}}">
        <view wx:for="{{resumeData.workExperiences}}" wx:key="index" class="job">
          <view class="job-header">
            <view class="job-company">{{item.company || item.companyName || '公司名称'}}</view>
            <view class="job-position">{{item.position || item.jobTitle || '职位'}}</view>
            <view class="job-period">{{item.startDate || item.startTime || '开始日期'}} - {{item.endDate || item.endTime || '结束日期'}}</view>
          </view>
          <view class="job-desc">{{item.description || item.workContent || '工作描述'}}</view>
        </view>
      </block>
      <block wx:else>
        <view class="job">
          <view class="job-header">
            <view class="job-company">公司名称</view>
            <view class="job-position">职位</view>
            <view class="job-period">开始日期 - 结束日期</view>
          </view>
          <view class="job-desc">工作描述</view>
        </view>
      </block>
    </view>

    <!-- 项目经验 -->
    <view class="section">
      <view class="section-title">项目经验</view>
      <block wx:if="{{resumeData.projectExperienceList && resumeData.projectExperienceList.length > 0}}">
        <view wx:for="{{resumeData.projectExperienceList}}" wx:key="index" class="project">
          <view class="job-header">
            <view class="job-company">{{item.name || item.projectName || '项目名称'}}</view>
            <view class="job-period">{{item.startDate || item.startTime || '开始日期'}} - {{item.endDate || item.endTime || '结束日期'}}</view>
          </view>
          <view class="job-desc">{{item.description || '项目描述'}}</view>
        </view>
      </block>
      <block wx:elif="{{resumeData.projectExperienceList && resumeData.projectExperienceList.length > 0}}">
        <view wx:for="{{resumeData.projectExperienceList}}" wx:key="index" class="project">
          <view class="job-header">
            <view class="job-company">{{item.name || item.projectName || '项目名称'}}</view>
            <view class="job-period">{{item.startDate || item.startTime || '开始日期'}} - {{item.endDate || item.endTime || '结束日期'}}</view>
          </view>
          <view class="job-desc">{{item.description || '项目描述'}}</view>
        </view>
      </block>
      <block wx:else>
        <view class="project">
          <view class="job-header">
            <view class="job-company">项目名称</view>
            <view class="job-period">开始日期 - 结束日期</view>
          </view>
          <view class="job-desc">项目描述</view>
        </view>
      </block>
    </view>
    <view class="section">
      <view class="section-title">兴趣爱好</view>
      <view class="job-desc">
        {{resumeData.personalInfo.interests || resumeData.selfEvaluation || '暂无兴趣爱好信息'}}
      </view>
    </view>
    <!-- 自我评价 -->
    <view class="section">
      <view class="section-title">自我评价</view>
      <view class="job-desc">
        {{resumeData.personalInfo.selfEvaluation || resumeData.selfEvaluation || '请填写自我评价'}}
      </view>
    </view>
  </view>
</view>


</template>