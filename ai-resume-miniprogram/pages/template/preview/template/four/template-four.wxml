<template name="template-four">
  <view class="template-four-container">
  <!-- 左侧栏：个人信息+技能 -->
  <view class="left-panel">
    <view class="avatar-container">
      <image class="avatar" src="{{resumeData.personalInfo.avatarUrl}}" mode="cover" />
      <view class="name">{{resumeData.personalInfo.name}}</view>
      <view class="title">{{resumeData.jobTitle}}</view>
    </view>

    <!-- 联系方式 -->
<view class="contact-section">
  <view class="section-title">个人信息</view>
  <view class="contact-item">
    <text class="contact-label">电话：</text><text class="contact-value">{{resumeData.personalInfo.phone || '请填写电话'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">邮箱：</text><text class="contact-value" decode="true">{{resumeData.personalInfo.email || '请填写邮箱'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">地址：</text><text class="contact-value">{{resumeData.personalInfo.address || '请填写地址'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">出生日期：</text><text class="contact-value">{{resumeData.personalInfo.birthDate || '请填写出生日期'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">期望薪资：</text><text class="contact-value">{{resumeData.expectedSalary || '请填写期望薪资'}}</text>
  </view>
  <view class="contact-item">
    <text class="contact-label">入职时间：</text><text class="contact-value">{{resumeData.startTime || '请填写入职时间'}}</text>
  </view>
</view>


    <!-- 技能进度条 -->
    <view class="skills-section">
      <view class="section-title">专业技能</view>
      <block wx:if="{{resumeData.skillList && resumeData.skillList.length > 0}}">
        <view wx:for="{{resumeData.skillList}}" wx:key="index" class="skill-item">
          <view class="skill-name">{{item.name}}</view>
          <view class="skill-bar"><view class="skill-fill" style="width:{{item.level * 20}}%;"></view></view>
        </view>
      </block>
      <block wx:else>
        <view class="skill-item">
          <view class="skill-name">技能名称</view>
          <view class="skill-bar">
            <view class="skill-fill" style="width:80%;"></view>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!-- 右侧栏：教育 / 工作 / 项目 / 自我评价 -->
  <view class="right-panel">
    <!-- 教育经历 -->
    <view class="section">
      <view class="section-title">教育经历</view>
      <block wx:if="{{resumeData.educationList && resumeData.educationList.length > 0}}">
        <view wx:for="{{resumeData.educationList}}" wx:key="index" class="job">
          <view class="job-header">
            <view class="job-company">{{item.school}}</view>
            <view class="job-position">{{item.degree}}</view>
            <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
          </view>
          <view class="job-desc">{{item.major}}</view>
        </view>
      </block>
      <block wx:else>
        <view class="job">
          <view class="job-header">
            <view class="job-company">学校名称</view>
            <view class="job-position">学历</view>
            <view class="job-period">开始日期 - 结束日期</view>
          </view>
          <view class="job-desc">专业描述</view>
        </view>
      </block>
    </view>

    <!-- 工作经历 -->
    <view class="section">
      <view class="section-title">工作经历</view>
      <block wx:if="{{resumeData.workExperienceList && resumeData.workExperienceList.length > 0}}">
        <view wx:for="{{resumeData.workExperienceList}}" wx:key="index" class="job">
          <view class="job-header">
            <view class="job-company">{{item.companyName}}</view>
            <view class="job-position">{{item.positionName}}</view>
            <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
          </view>
          <view class="job-desc">{{item.description}}</view>
        </view>
      </block>
      <block wx:else>
        <view class="job">
          <view class="job-header">
            <view class="job-company">公司名称</view>
            <view class="job-position">职位</view>
            <view class="job-period">开始日期 - 结束日期</view>
          </view>
          <view class="job-desc">工作描述</view>
        </view>
      </block>
    </view>

    <!-- 项目经验 -->
    <view class="section">
      <view class="section-title">项目经验</view>
      <block wx:if="{{resumeData.projectList && resumeData.projectList.length > 0}}">
        <view wx:for="{{resumeData.projectList}}" wx:key="index" class="project">
          <view class="job-header">
            <view class="job-company">{{item.projectName}}</view>
            <view class="job-period">{{item.startDate}} - {{item.endDate}}</view>
          </view>
          <view class="job-desc">{{item.description}}</view>
        </view>
      </block>
      <block wx:else>
        <view class="project">
          <view class="job-header">
            <view class="job-company">项目名称</view>
            <view class="job-period">开始日期 - 结束日期</view>
          </view>
          <view class="job-desc">项目描述</view>
        </view>
      </block>
    </view>
    <view class="section">
      <view class="section-title">兴趣爱好</view>
      <block wx:if="{{resumeData.interests}}">
        <view class="info-item">
          <text class="job-desc">{{resumeData.interests}}</text>
        </view>
      </block>
      <block wx:else>
        <view class="job-desc">暂无兴趣爱好信息</view>
      </block>
    </view>
    <!-- 自我评价 -->
      <view class="section">
        <view class="section-title">自我评价</view>
        <block wx:if="{{resumeData.selfEvaluation}}">
          <view class="job-desc">{{resumeData.selfEvaluation}}</view>
        </block>
        <block wx:else>
          <view class="job-desc">暂无自我评价信息</view>
        </block>
      </view>
  </view>
</view>


</template>