/* create.wxss */
.container {
  padding: 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 模式选择样式 */
.mode-selection {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.mode-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.mode-option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  transition: all 0.3s;
}

.mode-option.active {
  border-color: #667eea;
  background-color: #f0f2ff;
}

.mode-option radio {
  margin-right: 20rpx;
  transform: scale(1.2);
}

.mode-content {
  flex: 1;
}

.mode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.mode-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 模式面板通用样式 */
.mode-panel {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  resize: none;
}

/* 模板列表样式 */
.template-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.template-item {
  width: calc(33.333% - 15rpx);
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 30rpx 0;
  text-align: center;
  transition: all 0.3s;
}

.template-item:active {
  background-color: #f5f5f5;
}

.template-preview {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.template-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 按钮样式 */
.next-btn,
.generate-btn {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.next-btn[disabled],
.generate-btn[disabled] {
  background: #cccccc;
}

/* AI提示样式 */
.ai-hint {
  text-align: center;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.radio {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
}

.radio radio {
  transform: scale(0.8);
  margin-right: 10rpx;
}

.create-btn {
  margin-top: 40rpx;
  font-size: 34rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.tips {
  margin-top: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}