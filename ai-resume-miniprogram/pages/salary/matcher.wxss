/* pages/salary/matcher.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0 24rpx 40rpx;
}

/* 头部 */
.header {
  padding: 40rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 内容区域 */
.content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 城市选择 */
.city-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.city-item {
  padding: 20rpx 0;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.city-item.selected {
  border-color: #4dabf7;
  background-color: #e7f3ff;
  color: #4dabf7;
}

/* 经验年限选择 */
.experience-scroll {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.experience-scroll::-webkit-scrollbar {
  display: none;
}

.experience-item {
  padding: 16rpx 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.experience-item.selected {
  border-color: #4dabf7;
  background-color: #e7f3ff;
  color: #4dabf7;
}

/* 职位输入 */
.input-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.input {
  height: 96rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
}

.match-btn {
  height: 96rpx;
  background: linear-gradient(135deg, #57c7ff 0%, #4dabf7 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
  line-height: 96rpx;
}

.match-btn:active {
  background: linear-gradient(135deg, #4dabf7 0%, #3a9ad6 100%);
}

/* 结果展示 */
.result-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.rematch-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  color: #4dabf7;
  background-color: #e7f3ff;
  border: none;
  border-radius: 8rpx;
}

/* 薪资卡片 */
.salary-card {
  background: linear-gradient(135deg, #57c7ff 0%, #4dabf7 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  color: white;
  text-align: center;
  margin-bottom: 24rpx;
}

.salary-main {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 12rpx;
}

.salary-amount {
  font-size: 64rpx;
  font-weight: bold;
  margin-right: 8rpx;
}

.salary-unit {
  font-size: 32rpx;
  opacity: 0.9;
}

.salary-range {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 信息网格 */
.info-grid {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.info-item {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
}

.info-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #666;
}

/* 分析文本 */
.analysis-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  text-indent: 2em;
}