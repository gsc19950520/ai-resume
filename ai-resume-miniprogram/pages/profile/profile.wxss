/* profile.wxss */

.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f0f0f0;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.arrow image {
  width: 24rpx;
  height: 24rpx;
}

/* 统计数据区域 */
.stats-section {
  display: flex;
  background: #fff;
  margin: 10rpx 0 0 0;
  padding: 30rpx 0;
  border-radius: 16rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #eee;
}

/* AI职业成长报告入口 */
.growth-report-section {
  background: #fff;
  margin-top: 20rpx;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 26rpx;
  color: #4A90E2;
}

.growth-card {
  background: linear-gradient(135deg, #f5f0ff, #e8dfff);
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(166, 121, 255, 0.1);
  transition: all 0.3s;
}

.growth-card:active {
  transform: scale(0.98);
}

.growth-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.growth-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.growth-info {
  flex: 1;
}

.growth-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.growth-subtitle {
  font-size: 22rpx;
  color: #666;
}

.growth-arrow {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.growth-content {
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(166, 121, 255, 0.2);
}

.growth-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.growth-stats .stat {
  flex: 1;
  text-align: center;
}

.growth-stats .stat-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.growth-stats .stat-value {
  font-size: 26rpx;
  font-weight: bold;
  color: #A679FF;
}

.progress-container {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
  width: 120rpx;
}

.progress-bar {
  flex: 1;
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #A679FF, #8B5CF6);
  border-radius: 10rpx;
  transition: width 0.5s ease;
}

.progress-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #A679FF;
  width: 80rpx;
  text-align: right;
}

/* 面试历史 */
.interview-history-section {
  background: #fff;
  margin-top: 20rpx;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
}

.interview-list {
  max-height: 600rpx;
}

.interview-item {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.interview-item:active {
  background: #f0f0f0;
}

.interview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.interview-info {
  flex: 1;
}

.interview-job {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.interview-date {
  font-size: 22rpx;
  color: #666;
}

.interview-score {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.interview-details {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.detail-item {
  display: flex;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #666;
  margin-right: 6rpx;
}

.detail-value {
  font-size: 22rpx;
  color: #333;
}

.detail-value.highlight {
  color: #4A90E2;
  font-weight: bold;
}

.interview-rating {
  height: 8rpx;
  background-color: #eee;
  border-radius: 4rpx;
  overflow: hidden;
}

.rating-bar {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2, #50E3C2);
  transition: width 0.5s ease;
}

.empty-interview {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

.start-interview-btn {
  margin-top: 30rpx;
  background: linear-gradient(135deg, #4A90E2, #50E3C2);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
}

/* 功能菜单 */
.menu-section {
  background: #fff;
  margin-top: 20rpx;
  border-radius: 16rpx;
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon image {
  width: 44rpx;
  height: 44rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow image {
  width: 24rpx;
  height: 24rpx;
}

/* 退出登录按钮 */
.logout-btn {
  background-color: #fff;
  color: #e64340;
  font-size: 32rpx;
  margin: 40rpx 30rpx;
  border-radius: 8rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}