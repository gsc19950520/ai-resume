/* profile.wxss */

.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 0 24rpx 40rpx;
  position: relative;
  overflow: hidden;
}

/* 添加渐变背景装饰 */
.profile-container::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 500rpx;
  height: 500rpx;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(80, 227, 194, 0.1) 100%);
  border-radius: 50%;
  z-index: 0;
}

.profile-container::after {
  content: '';
  position: absolute;
  bottom: -100rpx;
  left: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, rgba(80, 227, 194, 0.1) 0%, rgba(74, 144, 226, 0.1) 100%);
  border-radius: 50%;
  z-index: 0;
}

.profile-container > view {
  position: relative;
  z-index: 1;
}

/* 用户信息区域 */
.user-info-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 36rpx;
  display: flex;
  align-items: center;
  margin: 30rpx 0 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(74, 144, 226, 0.15);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.user-info-section:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.1);
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  overflow: hidden;
  margin-right: 30rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #50E3C2 100%);
  padding: 4rpx;
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.2);
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 66rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  color: #666;
}

.arrow image {
  width: 28rpx;
  height: 28rpx;
}

/* 统计数据区域 */
.stats-section {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  margin: 0 0 24rpx 0;
  padding: 36rpx 0;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(74, 144, 226, 0.15);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-number {
  font-size: 44rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background-color: #eee;
}

/* 功能菜单 */
.menu-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  margin-top: 24rpx;
  border-radius: 24rpx;
  padding: 0 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(74, 144, 226, 0.15);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 36rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(245, 245, 245, 0.5);
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(80, 227, 194, 0.1) 100%);
  border-radius: 16rpx;
}

.menu-icon image {
  width: 40rpx;
  height: 40rpx;
}

.menu-text {
  flex: 1;
  font-size: 34rpx;
  color: #333;
}

.menu-arrow image {
  width: 28rpx;
  height: 28rpx;
}

/* 退出登录按钮 */
.logout-btn {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  color: #e64340;
  font-size: 34rpx;
  margin: 40rpx 0;
  border-radius: 24rpx;
  padding: 34rpx;
  box-shadow: 0 10rpx 30rpx rgba(74, 144, 226, 0.15);
  transition: all 0.3s;
}

.logout-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.1);
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #999;
}