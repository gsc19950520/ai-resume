/* profile.wxss */

.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f0f0f0;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.arrow image {
  width: 24rpx;
  height: 24rpx;
}

/* 统计数据区域 */
.stats-section {
  background-color: #fff;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  background-color: #f0f0f0;
  height: 60rpx;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon image {
  width: 44rpx;
  height: 44rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow image {
  width: 24rpx;
  height: 24rpx;
}

/* 退出登录按钮 */
.logout-btn {
  background-color: #fff;
  color: #e64340;
  font-size: 32rpx;
  margin: 40rpx 30rpx;
  border-radius: 8rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}