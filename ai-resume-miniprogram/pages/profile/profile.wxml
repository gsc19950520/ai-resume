<!--profile.wxml-->
<view class="profile-container">
  <!-- 用户信息区域 -->
  <view class="user-info-section" bindtap="onUserInfoTap">
    <view class="avatar">
      <image src="{{userInfo ? userInfo.avatarUrl : '/images/avatar.png'}}" mode="aspectFill"></image>
    </view>
    <view class="user-info">
      <view class="nickname">{{userInfo ? userInfo.nickName : '点击登录'}}</view>
      <view class="user-id">{{userInfo ? 'ID: ' + userInfo.openId : '登录后享受更多功能'}}</view>
    </view>
    <view class="arrow">
      <image src="/images/arrow.png" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 统计数据区域 -->
  <view class="stats-section" wx:if="{{userInfo}}">
    <view class="stat-item">
      <view class="stat-number">{{resumeCount || 0}}</view>
      <view class="stat-label">我的简历</view>
    </view>
    <view class="stat-divider"></view>
    <view class="stat-item">
      <view class="stat-number">{{templateCount || 0}}</view>
      <view class="stat-label">使用模板</view>
    </view>
    <view class="stat-divider"></view>
    <view class="stat-item">
      <view class="stat-number">{{favCount || 0}}</view>
      <view class="stat-label">收藏</view>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="myResumes">
      <view class="menu-icon">
        <image src="/images/resume.png" mode="aspectFit"></image>
      </view>
      <view class="menu-text">我的简历</view>
      <view class="menu-arrow">
        <image src="/images/arrow.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <view class="menu-item" bindtap="settings">
      <view class="menu-icon">
        <image src="/images/settings.png" mode="aspectFit"></image>
      </view>
      <view class="menu-text">设置</view>
      <view class="menu-arrow">
        <image src="/images/arrow.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <view class="menu-item" bindtap="feedback">
      <view class="menu-icon">
        <image src="/images/feedback.png" mode="aspectFit"></image>
      </view>
      <view class="menu-text">意见反馈</view>
      <view class="menu-arrow">
        <image src="/images/arrow.png" mode="aspectFit"></image>
      </view>
    </view>
    
    <view class="menu-item" bindtap="about">
      <view class="menu-icon">
        <image src="/images/about.png" mode="aspectFit"></image>
      </view>
      <view class="menu-text">关于我们</view>
      <view class="menu-arrow">
        <image src="/images/arrow.png" mode="aspectFit"></image>
      </view>
    </view>
  </view>

  <!-- 退出登录按钮 -->
  <button class="logout-btn" wx:if="{{userInfo}}" bindtap="logout">退出登录</button>

  <!-- 底部版本信息 -->
  <view class="version-info">
    <text>当前版本：v1.0.0</text>
  </view>
</view>