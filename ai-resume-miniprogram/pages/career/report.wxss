/* pages/career/report.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0 24rpx 40rpx;
}

/* 头部 */
.header {
  padding: 40rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 表单内容 */
.content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.input {
  height: 96rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
}

.generate-btn {
  height: 96rpx;
  background: linear-gradient(135deg, #51cf66 0%, #37b24d 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
  line-height: 96rpx;
  margin-top: 20rpx;
}

.generate-btn:active {
  background: linear-gradient(135deg, #37b24d 0%, #2f9e44 100%);
}

/* 报告内容 */
.report-content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.report-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.report-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  color: #666;
  background-color: #f8f8f8;
  border: none;
  border-radius: 8rpx;
}

.action-btn.primary {
  color: #51cf66;
  background-color: #e6f7ea;
}

/* 职业信息卡片 */
.info-card {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.info-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #666;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.info-arrow {
  font-size: 40rpx;
  color: #4dabf7;
  font-weight: bold;
  margin: 0 20rpx;
}

/* 通用区块 */
.section {
  margin-bottom: 36rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 优势列表 */
.strength-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.strength-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx;
  background-color: #f6ffed;
  border-radius: 12rpx;
  border-left: 6rpx solid #52c41a;
}

.strength-icon {
  width: 36rpx;
  height: 36rpx;
  background-color: #52c41a;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.strength-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 改进建议 */
.improvement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.improvement-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx;
  background-color: #fff7e6;
  border-radius: 12rpx;
  border-left: 6rpx solid #fa8c16;
}

.improvement-icon {
  width: 36rpx;
  height: 36rpx;
  background-color: #fa8c16;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.improvement-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 发展路径 */
.path-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.path-item {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
}

.path-header {
  margin-bottom: 16rpx;
}

.path-stage {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.path-tasks {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.task-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.task-number {
  width: 36rpx;
  height: 36rpx;
  background-color: #37b24d;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.task-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 技能推荐 */
.skill-recommendation {
  padding: 24rpx;
  background-color: #f0f9ff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  text-indent: 2em;
}

/* 资源列表 */
.resources-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.resource-item {
  padding: 16rpx 28rpx;
  background-color: #f8f8f8;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid #e0e0e0;
}