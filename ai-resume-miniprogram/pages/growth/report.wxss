/* pages/growth/report.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 0 30rpx 60rpx;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e8e8e8;
}

.header-left {
  flex: 1;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.action-btn .icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
}

.action-btn text {
  font-size: 20rpx;
  color: #666;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e8e8e8;
  border-top: 6rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 报告内容 */
.report-container {
  padding-top: 30rpx;
}

.report-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.report-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.report-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  display: block;
}

/* 统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
}

.growth-rate {
  color: #50E3C2;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-top: 8rpx;
  display: block;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 通用区块样式 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 图表区域 */
.chart-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-container {
  position: relative;
}

.growth-chart {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.chart-legend {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 10rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-dot.total { background: #4A90E2; }
.legend-dot.tech { background: #50E3C2; }
.legend-dot.logic { background: #F5A623; }
.legend-dot.clarity { background: #D0021B; }
.legend-dot.depth { background: #9013FE; }

/* 弱项分析 */
.weakpoints-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.weakpoints-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.weakpoint-item {
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f9f9f9;
}

.weakpoint-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.weakpoint-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.weakpoint-score {
  font-size: 24rpx;
  color: #999;
}

.progress-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #e8e8e8;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #F5A623 0%, #FFD700 100%);
  border-radius: 6rpx;
}

.improvement {
  font-size: 24rpx;
  color: #50E3C2;
  font-weight: 600;
}

/* 推荐方向 */
.direction-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.direction-card {
  background: linear-gradient(135deg, #50E3C2 0%, #4A90E2 100%);
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  color: #fff;
}

.direction-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
}

.direction-icon {
  font-size: 60rpx;
}

/* 成长规划 */
.growth-plan-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.growth-plan-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.plan-card {
  padding: 24rpx 30rpx 24rpx 40rpx;
  border-radius: 12rpx;
  background: #f9f9f9;
  border-left: 8rpx solid #4A90E2;
  position: relative;
}

.plan-period {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.goals-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.goal-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.goal-number {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #4A90E2;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.goal-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 学习资源 */
.resources-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.resources-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.resource-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  background: #f9f9f9;
}

.resource-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.resource-text {
  font-size: 26rpx;
  color: #666;
}

/* 底部按钮 */
.bottom-actions {
  display: flex;
  justify-content: center;
}

.download-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 30rpx 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  padding: 0 40rpx;
}

.retry-btn {
  background: #4A90E2;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 8rpx;
}

/* 响应式调整 */
@media screen and (max-width: 320px) {
  .stats-value {
    font-size: 36rpx;
  }
  
  .growth-chart {
    height: 350rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #181818;
  }
  
  .page-title,
  .section-title,
  .report-title,
  .weakpoint-name,
  .plan-period {
    color: #fff;
  }
  
  .subtitle,
  .report-date,
  .stats-label,
  .legend-item,
  .weakpoint-score,
  .goal-text,
  .resource-text,
  .error-text {
    color: #ccc;
  }
  
  .chart-section,
  .weakpoints-section,
  .direction-section,
  .growth-plan-section,
  .resources-section {
    background: #262626;
  }
  
  .weakpoint-item,
  .resource-item,
  .plan-card {
    background: #333;
  }
}