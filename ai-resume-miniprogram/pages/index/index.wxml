        </view>
        <view class="module-content">
          <view class="module-title">简历优化</view>
          <view class="module-desc">AI智能分析与提升建议</view>
        </view>
      </view> -->
    </view>
  </view>
  
  <!-- 智能推荐模块 -->
  <view class="smart-recommend-section" wx:if="{{userInfo}}">
    <view class="section-header">
      <text class="section-title">智能推荐</text>
    </view>
    <view class="recommend-card" wx:if="hasGrowthAdvice">
      <view class="recommend-icon">💡</view>
      <view class="recommend-content">
        <view class="recommend-title">提升建议</view>
        <view class="recommend-desc">{{growthRecommendation}}</view>
      </view>
      <view class="recommend-arrow">
        <image src="/images/arrow.png" mode="aspectFit"></image>
      </view>
    </view>
    <view class="recommend-card" wx:else>
      <view class="recommend-icon">🎯</view>
      <view class="recommend-content">
        <view class="recommend-title">开始您的第一次AI面试</view>
        <view class="recommend-desc">完成后将获得个性化的薪资匹配和成长建议</view>
      </view>
      <view class="recommend-arrow">
        <image src="/images/arrow.png" mode="aspectFit"></image>
      </view>
    </view>
  </view>

