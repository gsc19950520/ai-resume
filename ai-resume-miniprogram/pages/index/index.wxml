<!--index.wxml-->
<view class="container">
  <!-- 顶部欢迎区域 -->
  <view class="welcome-section">
    <view class="welcome-text">
      <text class="hello">你好，{{userInfo ? userInfo.nickName : '用户'}}</text>
      <text class="subtitle">欢迎使用AI简历助手</text>
    </view>
  </view>

  <!-- 核心功能模块区域 -->
  <view class="core-modules-section">
    <view class="section-header">
      <text class="section-title">核心AI功能</text>
    </view>
    
    <view class="core-modules-grid">
      <!-- AI模拟面试模块 -->
      <view class="core-module-card" bindtap="aiInterview">
        <view class="module-icon interview-icon">
          <image src="/images/interview.png" mode="aspectFit"></image>
        </view>
        <view class="module-content">
          <view class="module-title">AI模拟面试</view>
          <view class="module-desc">智能面试训练与评估</view>
        </view>
        <view class="module-badge">热门</view>
      </view>

      <!-- 城市薪资匹配模块 -->
      <view class="core-module-card" bindtap="salaryMatcher">
        <view class="module-icon salary-icon">
          <image src="/images/salary.png" mode="aspectFit"></image>
        </view>
        <view class="module-content">
          <view class="module-title">城市薪资匹配</view>
          <view class="module-desc">精准薪资水平分析</view>
        </view>
      </view>

      <!-- AI职业成长报告模块 -->
      <view class="core-module-card" bindtap="aiCareerReport">
        <view class="module-icon career-icon">
          <image src="/images/career.png" mode="aspectFit"></image>
        </view>
        <view class="module-content">
          <view class="module-title">AI职业成长报告</view>
          <view class="module-desc">个性化职业发展建议</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 基础功能区域 -->
  <view class="basic-features-section">
    <view class="section-header">
      <text class="section-title">简历管理</text>
    </view>
    
    <view class="feature-grid">
      <view class="feature-card" bindtap="createResume">
        <view class="feature-icon">
          <image src="/images/create.png" mode="aspectFit"></image>
        </view>
        <view class="feature-text">创建简历</view>
      </view>

      <view class="feature-card" bindtap="myResumes">
        <view class="feature-icon">
          <image src="/images/list.png" mode="aspectFit"></image>
        </view>
        <view class="feature-text">我的简历</view>
      </view>

      <view class="feature-card" bindtap="resumeTemplates">
        <view class="feature-icon">
          <image src="/images/template.png" mode="aspectFit"></image>
        </view>
        <view class="feature-text">简历模板</view>
      </view>
    </view>
  </view>

  <!-- 热门推荐区域 -->
  <view class="recommend-section">
    <view class="section-title">热门推荐</view>
    <view class="recommend-list">
      <view class="recommend-item" wx:for="{{recommendList}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}">
        <image src="{{item.image}}" mode="aspectFill"></image>
        <view class="recommend-text">{{item.title}}</view>
      </view>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="footer-tip">
    <text>如有问题，请联系客服</text>
  </view>
</view>