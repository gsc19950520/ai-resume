<view class="container">
  <!-- 顶部欢迎区域 -->
  <view class="welcome-section">
    <view class="welcome-text">
      <text class="hello">你好，{{userInfo ? userInfo.nickName : '用户'}}</text>
      <text class="subtitle">欢迎使用AI简历助手</text>
    </view>
  </view>

  <!-- 核心功能模块区域 -->
  <view class="core-modules-section">
    <view class="core-modules-grid">
      <!-- AI模拟面试模块 - 高亮主卡片 -->
      <view class="core-module-card main-card" bindtap="aiInterview">
        <view class="module-icon interview-icon">
          <image src="/images/user.png" mode="aspectFit"></image>
        </view>
        <view class="module-content">
          <view class="module-title">AI模拟面试</view>
          <view class="module-desc">通用AI面试系统，智能训练评估</view>
        </view>
        <view class="module-badge">热门</view>
      </view>

      <!-- AI职业成长报告模块 -->
      <view class="core-module-card career-card" bindtap="aiCareerReport">
        <view class="module-icon career-icon">
          <image src="/images/template.png" mode="aspectFit"></image>
        </view>
        <view class="module-content">
          <view class="module-title">AI职业成长报告</view>
          <view class="module-desc">基于面试历史自动生成</view>
        </view>
        <view class="trend-indicator" wx:if="{{lastInterviewScore}}">
          <text class="trend-text">上次得分: {{lastInterviewScore}}</text>
        </view>
      </view>
      
      <!-- 简历优化模块 -->
      <!-- <view class="core-module-card resume-card" bindtap="resumeOptimization">
        <view class="module-icon resume-icon">
