/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 0 24rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 欢迎区域 */
.welcome-section {
  padding: 80rpx 0 60rpx;
  text-align: center;
  width: 100%;
}

.welcome-text {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hello {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #666;
}

/* 核心AI功能模块 */
.core-modules-section {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 40rpx;
}

.core-modules-grid {
  display: flex;
  justify-content: center;
}

.core-module-card {
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(74, 144, 226, 0.3);
  position: relative;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  width: 100%;
  transform: scale(1);
}

.core-module-card:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(74, 144, 226, 0.2);
}

/* 主卡片 - AI模拟面试 */
.core-module-card.main-card {
  background: linear-gradient(135deg, #4A90E2 0%, #50E3C2 100%);
  color: white;
}

.core-module-card.main-card .module-title,
.core-module-card.main-card .module-desc {
  color: white;
}

.module-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
  100% {
    transform: translateY(0);
  }
}

.module-icon image {
  width: 64rpx;
  height: 64rpx;
}

.module-content {
  text-align: center;
  margin-bottom: 20rpx;
}

.module-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.module-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.module-badge {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

/* 添加渐变背景装饰 */
.container::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 500rpx;
  height: 500rpx;
  background: linear-gradient(135deg, rgba(74, 144, 226, 0.1) 0%, rgba(80, 227, 194, 0.1) 100%);
  border-radius: 50%;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -100rpx;
  left: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: linear-gradient(135deg, rgba(80, 227, 194, 0.1) 0%, rgba(74, 144, 226, 0.1) 100%);
  border-radius: 50%;
  z-index: 0;
}

.container > view {
  position: relative;
  z-index: 1;
}