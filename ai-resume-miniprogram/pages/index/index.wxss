/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0 24rpx 40rpx;
}

/* 欢迎区域 */
.welcome-section {
  padding: 32rpx 0 40rpx;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.hello {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 通用区块标题 */
.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 核心AI功能模块 */
.core-modules-section {
  margin-bottom: 40rpx;
}

.core-modules-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.core-module-card {
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s ease;
}

.core-module-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 主卡片 - AI模拟面试 */
.core-module-card.main-card {
  background: linear-gradient(135deg, #4A90E2 0%, #50E3C2 100%);
  color: white;
  box-shadow: 0 6rpx 24rpx rgba(74, 144, 226, 0.3);
}

.core-module-card.main-card .module-title,
.core-module-card.main-card .module-desc {
  color: white;
}

/* 职业报告卡片 */
.core-module-card.career-card {
  background: linear-gradient(135deg, #ffffff 0%, #f9f9f9 100%);
}

.module-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.interview-icon {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

.career-icon {
  background: linear-gradient(135deg, #A679FF 0%, #8B5CF6 100%);
}

/* 趋势指示器 */
.trend-indicator {
  background: rgba(166, 121, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  margin-left: auto;
}

.trend-text {
  font-size: 24rpx;
  color: #A679FF;
  font-weight: 600;
}

.module-icon image {
  width: 48rpx;
  height: 48rpx;
}

.module-content {
  flex: 1;
}

.module-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.module-desc {
  font-size: 24rpx;
  color: #666;
}

.module-badge {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

/* 智能推荐模块样式 */
.smart-recommend-section {
  margin-bottom: 40rpx;
}

.recommend-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.recommend-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.recommend-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.recommend-content {
  flex: 1;
}

.recommend-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.recommend-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.recommend-arrow {
  margin-left: 16rpx;
}

.recommend-arrow image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 基础功能区域 */
.basic-features-section {
  margin-bottom: 40rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.feature-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.04);
}

.feature-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.feature-icon image {
  width: 40rpx;
  height: 40rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}

/* 热门推荐区域 */
.recommend-section {
  margin-bottom: 40rpx;
}

.recommend-list {
  display: flex;
  gap: 24rpx;
  overflow-x: auto;
  padding-bottom: 16rpx;
}

.recommend-list::-webkit-scrollbar {
  display: none;
}

.recommend-item {
  flex-shrink: 0;
  width: 240rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.recommend-item image {
  width: 100%;
  height: 160rpx;
}

.recommend-text {
  padding: 16rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 20rpx 0;
}

.footer-tip text {
  font-size: 24rpx;
  color: #999;
}