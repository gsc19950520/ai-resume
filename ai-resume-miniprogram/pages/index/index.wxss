/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 0 24rpx 40rpx;
}

/* 欢迎区域 */
.welcome-section {
  padding: 32rpx 0 40rpx;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.hello {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 通用区块标题 */
.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 核心AI功能模块 */
.core-modules-section {
  margin-bottom: 40rpx;
}

.core-modules-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.core-module-card {
  background: linear-gradient(135deg, #ffffff 0%, #f9f9f9 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s ease;
}

.core-module-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.module-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.interview-icon {
  background: linear-gradient(135deg, #ff8566 0%, #ff6b4a 100%);
}

.salary-icon {
  background: linear-gradient(135deg, #57c7ff 0%, #4dabf7 100%);
}

.career-icon {
  background: linear-gradient(135deg, #51cf66 0%, #37b24d 100%);
}

.module-icon image {
  width: 48rpx;
  height: 48rpx;
}

.module-content {
  flex: 1;
}

.module-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.module-desc {
  font-size: 24rpx;
  color: #666;
}

.module-badge {
  background: linear-gradient(135deg, #ff6b4a 0%, #ff4d2a 100%);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

/* 基础功能区域 */
.basic-features-section {
  margin-bottom: 40rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.feature-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.04);
}

.feature-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.feature-icon image {
  width: 40rpx;
  height: 40rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}

/* 热门推荐区域 */
.recommend-section {
  margin-bottom: 40rpx;
}

.recommend-list {
  display: flex;
  gap: 24rpx;
  overflow-x: auto;
  padding-bottom: 16rpx;
}

.recommend-list::-webkit-scrollbar {
  display: none;
}

.recommend-item {
  flex-shrink: 0;
  width: 240rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.recommend-item image {
  width: 100%;
  height: 160rpx;
}

.recommend-text {
  padding: 16rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 20rpx 0;
}

.footer-tip text {
  font-size: 24rpx;
  color: #999;
}