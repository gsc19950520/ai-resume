/* index.wxss */

/* 欢迎区域 */
.welcome-section {
  background: linear-gradient(135deg, #07c160 0%, #06a756 100%);
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  color: #fff;
}

.welcome-text .hello {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.welcome-text .subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 功能卡片区域 */
.features-section {
  margin-bottom: 40rpx;
}

.features-section .card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  transition: transform 0.3s;
}

.features-section .card:active {
  transform: scale(0.98);
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.feature-icon image {
  width: 48rpx;
  height: 48rpx;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #999;
}

.feature-arrow image {
  width: 24rpx;
  height: 24rpx;
}

/* 推荐区域 */
.recommend-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.recommend-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recommend-item {
  width: 32%;
  margin-bottom: 20rpx;
}

.recommend-item image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.recommend-text {
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
}