/* edit.wxss */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 40rpx;
  background-color: white;
  text-align: center;
  border-bottom: 1rpx solid #e0e0e0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

/* 部分导航 */
.section-nav {
  background-color: white;
  padding: 20rpx 0;
  white-space: nowrap;
  border-bottom: 1rpx solid #e0e0e0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-item {
  display: inline-block;
  padding: 20rpx 40rpx;
  margin: 0 10rpx;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.nav-item.active {
  color: #667eea;
  font-weight: 500;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 4rpx;
  background-color: #667eea;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.edit-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 5rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.input {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  resize: none;
}

/* 技能相关样式 */
.skill-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.skill-header {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.skill-name {
  width: 85%;
  padding: 0rpx 15rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #333;
  background-color: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  box-sizing: border-box;
}

.skill-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 15rpx;
}

.level-label {
  font-size: 26rpx;
  color: #666;
  min-width: 100rpx;
}

.skill-levels {
  display: flex;
  gap: 10rpx;
  flex: 1;
}

.level-item {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #666;
  background-color: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 6rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.level-item.active {
  background-color: #07c160;
  color: white;
  border-color: #07c160;
}

.delete-btn {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #ee0a24;
  border: 1rpx solid #ee0a24;
  border-radius: 6rpx;
  cursor: pointer;
}

.progress-container {
  margin-top: 15rpx;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #07c160;
  transition: width 0.3s;
}

.add-skill-btn {
  margin-top: 20rpx;
  padding: 12rpx 20rpx;
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  border-radius: 80rpx;
}

/* 日期行 */
.date-row {
  display: flex;
  gap: 30rpx;
}

.date-item {
  flex: 1;
  margin-bottom: 40rpx;
}

/* 项目/教育/工作经历项 */
.education-item,
.work-item,
.project-item {
  margin-bottom: 40rpx;
  padding: 30rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 15rpx;
  background-color: #fafafa;
}

.item-header {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 删除按钮样式 */
.delete-btn {
  font-size: 28rpx;
  color: #ff4d4f;
  padding: 8rpx 20rpx;
  border-radius: 15rpx;
  background-color: #fff1f0;
  border: 1rpx solid #ffccc7;
}

.delete-btn:active {
  background-color: #ffccc7;
}

/* 添加按钮 */
.add-btn {
  margin-top: 20rpx;
  background-color: transparent;
  color: #667eea;
  border: 2rpx dashed #667eea;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.add-btn::after {
  border: none;
}

/* 只读个人信息部分样式 */
.readonly-section {
  background-color: #f5f7fa;
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #667eea;
}

.readonly-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.readonly-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.readonly-item:last-child {
  border-bottom: none;
}

.readonly-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 0;
  min-width: 120rpx;
}

.readonly-text {
  font-size: 30rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}

/* 可编辑部分样式 */
.editable-section {
  margin-bottom: 20rpx;
}

.editable-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 提示信息 */
.tips {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.tips text {
  font-size: 24rpx;
  color: #999;
}

/* 底部保存按钮 */
.footer {
  padding: 30rpx;
  background-color: white;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.save-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.save-btn::after {
  border-radius: 40rpx;
}