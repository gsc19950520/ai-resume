<!--login.wxml-->
<view class="login-container">
  <!-- 登录头部 -->
  <view class="login-header">
    <view class="logo">
      <image src="/images/logo.png" mode="aspectFit"></image>
    </view>
    <view class="title">AI简历助手</view>
    <view class="subtitle">智能简历生成与管理</view>
  </view>

  <!-- 登录主体 -->
  <view class="login-body">
    <!-- 登录按钮 -->
    <button class="wx-login-btn" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">
      <image class="wx-icon" src="/images/wx.png" mode="aspectFit"></image>
      <text>微信一键登录</text>
    </button>

    <!-- 隐私协议 -->
    <view class="privacy-agreement">
      <text>登录即表示同意</text>
      <text class="link" bindtap="viewPrivacy">《隐私政策》</text>
      <text>和</text>
      <text class="link" bindtap="viewTerms">《用户协议》</text>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="login-footer">
    <text class="version">版本 1.0.0</text>
  </view>
</view>