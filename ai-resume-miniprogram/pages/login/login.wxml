<!--login.wxml-->
<view class="login-container">
  <!-- 登录头部 -->
  <view class="login-header">
    <view class="logo">
      <image src="/images/logo.jpg" mode="aspectFit"></image>
    </view>
    <view class="title">AI面练通</view>
    <view class="subtitle">简历生成与模拟面试</view>
  </view>

  <!-- 登录主体 -->
  <view class="login-body">
    <!-- 登录按钮 -->
    <button class="wx-login-btn" bindtap="onGetUserInfo">
      <text>微信登录</text>
    </button>
    
    <!-- 授权提示 -->
    <view class="auth-tip">
        <text>点击登录，系统将为您生成卡通头像和随机昵称</text>
      </view>
  </view>

  <!-- 底部提示 -->
  <view class="login-footer">
    <text class="version">版本 1.0.0</text>
  </view>
</view>