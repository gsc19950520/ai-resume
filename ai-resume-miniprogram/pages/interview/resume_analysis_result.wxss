/* resume_analysis_result.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #e0e0e0;
}

.back-btn {
  font-size: 30rpx;
  color: #1989fa;
  padding: 10rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-placeholder {
  width: 80rpx;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top: 6rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 分析内容区域 */
.analysis-content {
  flex: 1;
  padding: 30rpx;
}

/* 分析区块 */
.analysis-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.section-content {
  padding: 0 10rpx;
}

/* 基本信息 */
.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 15rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
  margin-right: 20rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.level-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.level-badge.level-junior {
  background-color: #e3f2fd;
  color: #1976d2;
}

.level-badge.level-middle {
  background-color: #fff3e0;
  color: #f57c00;
}

.level-badge.level-senior {
  background-color: #f3e5f5;
  color: #7b1fa2;
}

.level-badge.level-expert {
  background-color: #e8f5e8;
  color: #388e3c;
}

/* 技术栈分析 */
.tech-category {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 15rpx;
}

.tech-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.tech-category-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tech-proficiency {
  font-size: 24rpx;
  color: #666;
}

.tech-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.skill-tag {
  background-color: #1989fa;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.analysis-summary {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f8ff;
  border-radius: 10rpx;
  border-left: 6rpx solid #1989fa;
}

.summary-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

/* 项目经验统计 */
.project-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  background-color: #f9f9f9;
  border-radius: 15rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.project-highlights {
  padding: 20rpx;
  background-color: #f0f8ff;
  border-radius: 10rpx;
  border-left: 6rpx solid #07c160;
}

.highlights-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.highlights-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

/* 业务能力指标 */
.business-metrics {
  padding: 10rpx 0;
}

.metric-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 15rpx;
}

.metric-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.metric-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.metric-score {
  font-size: 24rpx;
  color: #666;
}

.metric-bar {
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.metric-fill {
  height: 100%;
  background: linear-gradient(90deg, #1989fa, #07c160);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.metric-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 面试问题 */
.question-category {
  margin-bottom: 40rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.category-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.category-count {
  font-size: 24rpx;
  color: #999;
}

.question-item {
  margin-bottom: 30rpx;
  padding: 25rpx;
  background-color: #f9f9f9;
  border-radius: 15rpx;
  border-left: 6rpx solid #ff9800;
}

.question-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.question-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff9800;
  margin-right: 15rpx;
  min-width: 40rpx;
}

.question-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  font-weight: 500;
}

.question-difficulty {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  margin-left: 15rpx;
}

.difficulty-easy {
  background-color: #e8f5e8;
  color: #388e3c;
}

.difficulty-medium {
  background-color: #fff3e0;
  color: #f57c00;
}

.difficulty-hard {
  background-color: #ffebee;
  color: #d32f2f;
}

.question-details {
  padding-left: 55rpx;
}

.question-purpose,
.question-criteria,
.question-followup {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

/* 总结建议 */
.summary-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 15rpx;
}

.summary-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  padding: 30rpx;
  background-color: white;
  border-top: 1rpx solid #e0e0e0;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin: 0;
}

.action-btn.secondary {
  background-color: white;
  color: #1989fa;
  border: 2rpx solid #1989fa;
}

.action-btn.primary {
  background-color: #07c160;
  color: white;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .analysis-content {
    padding: 20rpx;
  }
  
  .analysis-section {
    padding: 25rpx;
  }
  
  .section-title {
    font-size: 30rpx;
  }
  
  .bottom-actions {
    padding: 20rpx;
  }
}