/* pages/interview/history.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background-color: #fff;
  padding: 30rpx 32rpx;
  border-bottom: 1rpx solid #e0e0e0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  flex: 1;
  padding-top: 100rpx;
  padding-bottom: 150rpx;
}

.interview-list {
  background-color: #fff;
}

.interview-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  position: relative;
}

.interview-item:active {
  background-color: #f9f9f9;
}

.interview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.interview-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
}

.interview-time {
  font-size: 26rpx;
  color: #999;
}

.interview-info {
  display: flex;
  align-items: center;
}

.interview-result {
  font-size: 28rpx;
  color: #666;
}

.interview-arrow {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.interview-arrow image {
  width: 24rpx;
  height: 40rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.loading-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.primary-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
}

.primary-btn:active {
  background-color: #06ad56;
}