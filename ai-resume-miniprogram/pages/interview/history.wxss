.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background-color: #fff;
  padding: 30rpx 32rpx;
  border-bottom: 1rpx solid #e0e0e0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  flex: 1;
  padding-top: 100rpx;
  padding-bottom: 150rpx;
}

.interview-list {}

.interview-item-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  margin-bottom: 1rpx;
}

/* 滑动主体 */
.interview-item {
  padding: 30rpx;
  background-color: #fff;
  transition: transform 0.2s;
  z-index: 2; /* 上层 */
  position: relative;
  width: 100%; /* 确保宽度填满整个容器 */
  box-sizing: border-box; /* 确保padding不影响宽度 */
  overflow: hidden; /* 防止内容溢出 */
  /* 确保完全覆盖delete-btn */
  min-height: 100%;
  margin-bottom: -1rpx; /* 补偿wrapper的margin-bottom */
}

.delete-btn {
  position: absolute;
  right: 0;
  top: 10;
  width: 120rpx; /* 删除按钮固定宽度 */
  height: 98%;
  background-color: #ff4444;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  z-index: 1; /* 底层 */
}

.interview-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.interview-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.interview-time {
  font-size: 26rpx;
  color: #999;
}

.interview-result {
  font-size: 28rpx;
  color: #666;
}

.interview-arrow {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.interview-arrow image {
  width: 24rpx;
  height: 40rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.loading-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.primary-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
}
