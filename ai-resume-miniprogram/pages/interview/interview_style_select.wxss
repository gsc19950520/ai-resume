/* interview_style_select.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.avatar-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.header-center {
  font-size: 36rpx;
  font-weight: bold;
}

.header-right {
  width: 80rpx;
}

/* 简历选择模块 */
.resume-selector {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.resume-picker-wrapper {
  width: 100%;
}

.resume-picker {
  width: 100%;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
  min-height: 80rpx;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

.job-info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.job-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.job-badge {
  background-color: #1989fa;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 风格选择器 */
.style-selector {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.selector-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.selector-subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 两列三行网格布局 */
.persona-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

/* 面试官风格卡片 */
.persona-card {
  background: #f9f9f9;
  border: 2rpx solid #eee;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.persona-card:active {
  transform: scale(0.98);
}

.persona-card.selected {
  border-color: #07c160;
  background-color: #f0f9f4;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.2);
}

.persona-emoji {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.persona-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.persona-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 预览区域 */
.preview-section {
  background: #f5f8ff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.preview-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.preview-question {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 8rpx solid #07c160;
}

/* 开始面试按钮 */
.start-interview-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  border-radius: 45rpx;
  margin: 0;
  transition: all 0.3s ease;
}

.start-interview-btn.active {
  background-color: #07c160;
  color: white;
}

.start-interview-btn.disabled {
  background-color: #f0f0f0;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .persona-grid {
    gap: 16rpx;
  }
  
  .persona-card {
    padding: 24rpx;
  }
  
  .persona-description {
    font-size: 22rpx;
  }
}