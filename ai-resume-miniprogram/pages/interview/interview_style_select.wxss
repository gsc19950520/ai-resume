/* interview_style_select.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.avatar-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.header-center {
  font-size: 36rpx;
  font-weight: bold;
}

.header-right {
  width: 80rpx;
}

/* 简历选择模块 */
.resume-selector {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.resume-picker-wrapper {
  width: 100%;
}

.resume-picker {
  width: 100%;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
  min-height: 80rpx;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

.job-info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.job-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.job-badge {
  background-color: #1989fa;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 无简历提示样式 */
.no-resume-prompt {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border: 2px dashed #4a90e2;
  border-radius: 12px;
  padding: 20rpx;
  margin: 15rpx 0;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.no-resume-prompt::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(74, 144, 226, 0.1) 0%, transparent 70%);
  animation: pulse 3s infinite;
}

@keyframes pulse {
  0% { transform: scale(0.8); opacity: 0.5; }
  50% { transform: scale(1); opacity: 0.8; }
  100% { transform: scale(0.8); opacity: 0.5; }
}

.no-resume-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

.no-resume-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
  margin-bottom: 10rpx;
}

.no-resume-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.buttons-container {
  display: flex;
  justify-content: center;
  gap: 10rpx;
  flex-wrap: wrap;
}

.upload-resume-btn, .create-resume-btn {
  background-color: #4a90e2;
  border: 1px solid #4a90e2;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 50px;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
  margin: 5rpx 0;
  box-shadow: 0 2px 6px rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
  min-width: 200rpx;
}

.upload-resume-btn:active, .create-resume-btn:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(74, 144, 226, 0.3);
}

.prompt-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.prompt-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1e40af;
  margin-bottom: 16rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #3b82f6;
  line-height: 1.5;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

/* 按钮样式已在上方统一定义 */

/* 风格选择器 */
.style-selector {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.selector-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.selector-subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 两列三行网格布局 */
.persona-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

/* 面试官风格卡片 */
.persona-card {
  background: #f9f9f9;
  border: 2rpx solid #eee;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.persona-card:active {
  transform: scale(0.98);
}

.persona-card.selected {
  border-color: #07c160;
  background-color: #f0f9f4;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.2);
}

.persona-emoji {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.persona-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.persona-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 预览区域 */
.preview-section {
  background: #f5f8ff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.preview-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.preview-question {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 8rpx solid #07c160;
}

/* 分析简历按钮 */
.analyze-resume-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  border-radius: 45rpx;
  margin: 0 0 20rpx 0;
  transition: all 0.3s ease;
}

.analyze-resume-btn.active {
  background-color: #1989fa;
  color: white;
}

.analyze-resume-btn.disabled {
  background-color: #f0f0f0;
  color: #999;
}

/* 开始面试按钮 */
.start-interview-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  border-radius: 45rpx;
  margin: 0;
  transition: all 0.3s ease;
}

.start-interview-btn.active {
  background-color: #07c160;
  color: white;
}

.start-interview-btn.disabled {
  background-color: #f0f0f0;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .persona-grid {
    gap: 16rpx;
  }
  
  .persona-card {
    padding: 24rpx;
  }
  
  .persona-description {
    font-size: 22rpx;
  }
}