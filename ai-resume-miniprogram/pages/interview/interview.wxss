/* interview.wxss */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8fafc;
}

/* 面试官风格选择模块样式 */
.persona-selector {
  width: 100%;
  margin-bottom: 40rpx;
  animation: fade-in 0.5s ease-in;
}

.selector-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 卡片网格布局 */
.persona-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

/* 卡片样式 */
.persona-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.persona-card:active {
  transform: scale(0.98);
}

.persona-card.hover {
  transform: scale(1.05);
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);
}

.persona-card.selected {
  box-shadow: 0 0 0 4rpx #4f46e5, 0 6px 16px rgba(79, 70, 229, 0.2);
  transform: scale(1.02);
}

/* 卡片内容样式 */
.persona-emoji {
  font-size: 64rpx;
  margin-bottom: 12rpx;
}

.persona-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.persona-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.persona-example {
  font-size: 22rpx;
  color: #888;
  font-style: italic;
  line-height: 1.4;
}

/* 预览区域样式 */
.preview-section {
  background-color: #f0f4ff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
  border-left: 8rpx solid #4f46e5;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4f46e5;
  margin-bottom: 16rpx;
}

.preview-question {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 开始面试按钮样式 */
.start-interview-btn {
  background-color: #4f46e5;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 12rpx;
  padding: 24rpx 0;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.start-interview-btn.active {
  background-color: #4f46e5;
}

.start-interview-btn.disabled {
  background-color: #ccc;
}

.start-interview-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(79, 70, 229, 0.4);
  }
  70% {
    box-shadow: 0 0 0 20rpx rgba(79, 70, 229, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(79, 70, 229, 0);
  }
}

.persona-card.selected {
  animation: pulse 2s infinite;
}

/* 顶部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  background-color: #ffffff;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-left, .header-right {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  text-align: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 行业-岗位标签 */
.industry-job-tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 28rpx;
  padding: 15rpx 25rpx;
  margin: 20rpx;
  border-radius: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

/* 会话信息样式 */
.interview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.interview-info {
  flex: 1;
  min-width: 0;
}

.position {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.persona {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.timer {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #666;
  padding: 8rpx 16rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 6rpx;
}

.timer.warning {
  color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
  font-weight: bold;
}

.timer-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.answer-duration {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #28a745;
  padding: 8rpx 16rpx;
  background: rgba(40, 167, 69, 0.1);
  border-radius: 6rpx;
}

/* 问题卡片样式 */
.question-card-wrapper {
  margin-bottom: 30rpx;
}

.question-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-round {
  font-size: 28rpx;
  color: #666;
  padding: 6rpx 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
}

.question-depth {
  font-size: 24rpx;
  color: #666;
  padding: 6rpx 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
}

.question-content {
  font-size: 34rpx;
  line-height: 1.6;
  color: #333;
  min-height: 200rpx;
  margin-bottom: 20rpx;
}

.expected-points {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.points-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #495057;
  display: block;
  margin-bottom: 12rpx;
}

.points-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.point-item {
  font-size: 24rpx;
  color: #6c757d;
  background: #e9ecef;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #4285f4;
}

/* 答题面板 */
.answer-panel {
  background-color: #ffffff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.answer-textarea-container {
  position: relative;
  margin-bottom: 30rpx;
}

.answer-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #333333;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999999;
}

/* 音频控制 */
.audio-controls {
  display: flex;
  gap: 20rpx;
}

.audio-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx;
  background-color: #f0f0f0;
  color: #333333;
  border-radius: 10rpx;
}

.audio-btn.recording {
  background-color: #ff3b30;
  color: #ffffff;
}

.audio-btn[disabled] {
  opacity: 0.5;
}

/* 评分反馈区域样式 */
.feedback-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  animation: slideInUp 0.3s ease-out;
}

.feedback-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.consecutive-no-match {
  margin-top: 20rpx;
  padding: 16rpx;
  background: rgba(255, 107, 107, 0.1);
  border-radius: 8rpx;
  border-left: 4rpx solid #ff6b6b;
}

.no-match-warning {
  font-size: 26rpx;
  color: #ff6b6b;
  line-height: 1.4;
}

.score-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.score-item {
  flex: 1;
  text-align: center;
}

.score-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.score-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
}

.feedback-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.matched-points {
  margin-top: 20rpx;
}

.matched-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.matched-item {
  font-size: 26rpx;
  color: #07c160;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}

/* 追问提示样式 */
.follow-up-hint {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-top: 20rpx;
  border-left: 6rpx solid #2196f3;
}

.hint-text {
  color: #1565c0;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.5;
}

/* 城市薪资匹配卡片样式 */
.salary-match-card {
  background: linear-gradient(135deg, #fff3e0 0%, #fbe9e7 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 20rpx;
  border: 1rpx solid #ffcc80;
  transition: all 0.3s ease;
}

.salary-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #e65100;
  margin-bottom: 20rpx;
}

.salary-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.salary-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.salary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(255, 152, 0, 0.2);
}

.salary-item:last-child {
  border-bottom: none;
}

.salary-label {
  font-size: 28rpx;
  color: #666666;
}

.salary-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6f00;
}

.salary-expected {
  color: #4caf50;
}

.salary-match {
  color: #2196f3;
}

.match-status {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 8rpx;
  color: #666666;
}

/* 会话时间线 - SessionTimeline */
.timeline-section {
  margin: 30rpx 0;
  padding: 0 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.timeline-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.timeline-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.timeline-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.timeline-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 24rpx;
  transition: all 0.3s ease;
}

.timeline-number {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

.timeline-completed {
  background-color: #7ED321;
}

.timeline-current {
  background-color: #4A90E2;
  width: 50rpx;
  height: 50rpx;
  animation: pulse 1.5s infinite;
}

.timeline-pending {
  background-color: #E8E8E8;
}

.timeline-line {
  position: absolute;
  top: 20rpx;
  left: 64rpx;
  width: 48rpx;
  height: 4rpx;
  background-color: #E8E8E8;
}

.timeline-stats {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(74, 144, 226, 0.7);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(74, 144, 226, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(74, 144, 226, 0);
  }
}

/* 底部按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  gap: 20rpx;
}

.voice-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: #f0f0f0;
  color: #333;
  border: 1px solid #ddd;
}

.voice-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.submit-btn {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #4285f4, #34a853);
  color: white;
  border: none;
}

.voice-btn:disabled,
.submit-btn:disabled {
  opacity: 0.6;
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .page {
    background-color: #1F1F1F;
  }
  
  .navigation-bar {
    background-color: #2A2A2A;
    color: #FFFFFF;
  }
  
  .question-card-wrapper {
    background: linear-gradient(135deg, #4A90E2, #50E3C2);
  }
  
  .question-card {
    background-color: #2A2A2A;
    color: #FFFFFF;
  }
  
  .answer-panel {
    background-color: #2A2A2A;
  }
  
  .input-area {
    background-color: #3A3A3A;
    color: #FFFFFF;
  }
  
  .feedback-section {
    background-color: #2A2A2A;
    color: #FFFFFF;
  }
  
  .score-label {
    color: #FFFFFF;
  }
  
  .timeline-section {
    background-color: #2A2A2A;
  }
  
  .timeline-title {
    color: #FFFFFF;
  }
  
  .timeline-stats {
    color: #CCCCCC;
  }
  
  .bottom-buttons {
    background-color: #2A2A2A;
  }
  
  .skip-btn {
    background-color: #3A3A3A;
    color: #CCCCCC;
  }
  
  .loading {
    background-color: rgba(31, 31, 31, 0.9);
  }
  
  .loading-text {
    color: #FFFFFF;
  }
}

/* 加载提示 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 30rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}