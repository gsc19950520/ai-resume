/* 全局样式重置和基础设置 */
page, view, text, image, button, input, textarea {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  color: #333;
  min-height: 100vh;
  overflow-x: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f7fa;
  animation: pageSlideIn 0.5s ease-out;
}

/* 页面过渡动画 */
@keyframes pageSlideIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 顶部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
  height: 140rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.header-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.job-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  display: inline-block;
}

.header-center {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

/* 进度区域 */
.progress-area {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 10rpx;
}

.countdown-timer {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  padding: 6rpx 16rpx;
  background-color: #f0f2f5;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.countdown-timer.time-warning {
  background-color: #ffebee;
  color: #e53935;
  border: 2rpx solid #ef5350;
}

.progress-bar {
  width: 200rpx;
  height: 10rpx;
  background-color: #e0e0e0;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4caf50 0%, #8bc34a 100%);
  border-radius: 5rpx;
  transition: width 0.3s ease;
}

/* 主内容区域 */
.main-content {
  display: flex;
  flex: 1;
  padding: 30rpx;
  gap: 30rpx;
  min-height: calc(100vh - 280rpx);
  align-items: flex-start;
}

/* 增强的响应式布局 */
@media screen and (max-width: 768px) {
  .main-content {
    flex-direction: column;
    padding: 20rpx;
    gap: 20rpx;
  }
  
  .left-column,
  .right-column {
    flex: 1;
    width: 100%;
  }
  
  .header-center {
    font-size: 32rpx;
  }
  
  .job-badge {
    font-size: 20rpx;
    padding: 6rpx 16rpx;
  }
  
  .question-content {
    font-size: 32rpx;
  }
  
  .footer-controls {
    flex-direction: column;
    height: auto;
    gap: 16rpx;
    padding: 20rpx;
  }
  
  .footer-btn {
    width: 100%;
    height: 100rpx;
  }
  
  .progress-bar {
    width: 150rpx;
  }
}

/* 左侧列 */
.left-column {
  flex: 0 0 58%;
  display: flex;
  flex-direction: column;
}

/* 右侧列 */
.right-column {
  flex: 0 0 42%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 问题卡片样式 */
.question-card-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.question-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border: 2rpx solid #e8eaf6;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.question-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.question-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.question-header {
  margin-bottom: 30rpx;
}

.persona-label {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.persona-hr {
  background-color: #e1bee7;
  color: #6a1b9a;
}

.persona-tech {
  background-color: #bbdefb;
  color: #1565c0;
}

.persona-manager {
  background-color: #c8e6c9;
  color: #2e7d32;
}

.question-content {
  font-size: 34rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
  white-space: pre-wrap;
}

.hint-text {
  font-size: 28rpx;
  color: #78909c;
  background-color: #f1f8e9;
  padding: 20rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #8bc34a;
}

/* 用户回答面板 */
.user-answer-panel {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border: 2rpx solid #e8eaf6;
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  animation: fade-in-up 0.5s ease;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.user-answer-panel:focus-within {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.15);
  border-color: #667eea;
}

.panel-header {
  margin-bottom: 20rpx;
}

.panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.answer-input-area {
  margin-bottom: 20rpx;
}

.answer-textarea {
  width: 100%;
  min-height: 200rpx;
  max-height: 400rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 30rpx;
  line-height: 1.6;
  resize: none;
  background-color: #fff;
  transition: all 0.3s ease;
  caret-color: #667eea;
  font-family: inherit;
}

/* 添加输入时的实时反馈 */
.answer-textarea:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  background-color: #f8faff;
}

.answer-textarea::placeholder {
  color: #9e9e9e;
}

/* 提交行 */
.submit-row {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.submit-btn-primary {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.submit-btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.submit-btn-primary[disabled] {
  background: #e0e0e0;
  color: #9e9e9e;
  box-shadow: none;
}

.submit-btn-secondary {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  border: 2rpx solid #e0e0e0;
  border-radius: 24rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.submit-btn-secondary:active {
  background-color: #e0e0e0;
  transform: scale(0.98);
}

/* 问答记录列表 */
.interview-history-list {
  flex: 1;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border: 2rpx solid #e8eaf6;
  border-radius: 30rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.history-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.history-list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.history-list-count {
  font-size: 26rpx;
  color: #757575;
}

.history-list-content {
  flex: 1;
  overflow-y: auto;
  padding-right: 10rpx;
}

.history-list-item {
  margin-bottom: 30rpx;
  animation: fade-in-bottom 0.5s ease;
  position: relative;
  transition: transform 0.2s ease;
}

.history-list-item:hover {
  transform: translateX(4rpx);
}

/* 为问答记录添加阅读状态指示 */
.history-list-item.unread .question-block,
.history-list-item.unread .answer-block {
  border-left: 6rpx solid #667eea;
}

/* 问题记录块 */
.question-block {
  background-color: #f0f4ff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.question-block::before {
  content: '';
  position: absolute;
  top: 16rpx;
  left: -10rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: #f0f4ff;
  border-radius: 50%;
  border: 8rpx solid #f5f7fa;
}

/* 回答记录块 */
.answer-block {
  background-color: #fff3e0;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.answer-block::before {
  content: '';
  position: absolute;
  top: 16rpx;
  left: -10rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: #fff3e0;
  border-radius: 50%;
  border: 8rpx solid #f5f7fa;
}

.block-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 12rpx;
}

.block-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.block-icon image {
  width: 100%;
  height: 100%;
}

.question-icon {
  background-color: #e3f2fd;
}

.answer-icon {
  background-color: #fff3e0;
  font-size: 32rpx;
}

.block-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #666;
  flex: 1;
}

.block-time {
  font-size: 22rpx;
  color: #9e9e9e;
}

.question-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #424242;
  white-space: pre-wrap;
}

.answer-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #424242;
  white-space: pre-wrap;
}

/* 底部控制按钮 */
.footer-controls {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border-top: 2rpx solid #e8eaf6;
  height: 140rpx;
  align-items: center;
}

.footer-btn {
  flex: 1;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  border: none;
  letter-spacing: 2rpx;
  user-select: none;
  -webkit-user-select: none;
}

/* 增强按钮交互体验 */
.footer-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 按钮点击波纹效果 */
.footer-btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.footer-btn:active::after {
  width: 300rpx;
  height: 300rpx;
}

/* 按钮光泽效果 */
.footer-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0) 100%);
  transition: transform 0.3s ease;
  transform: translateX(-100%);
}

.footer-btn:active::before {
  transform: translateX(100%);
}

.footer-btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.footer-btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.footer-btn-warning {
  background: linear-gradient(135deg, #ffb74d 0%, #ff9800 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 152, 0, 0.3);
}

.footer-btn[disabled] {
  opacity: 0.6;
  transform: none;
}

/* 时间警告覆盖层 */
/* 时间警告覆盖层 */
.time-warning-overlay {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.8);
  padding: 40rpx;
  border-radius: 16rpx;
  z-index: 9999;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  animation: fade-in 0.3s ease, pulseWarning 2s infinite;
}

/* 增强警告动画 */
@keyframes pulseWarning {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.05);
  }
}

.warning-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.warning-icon {
  font-size: 60rpx;
}

.warning-text {
  font-size: 32rpx;
  color: white;
  font-weight: 600;
}

.warning-time {
  font-size: 40rpx;
  color: #EF4444;
  font-weight: bold;
}

/* 动画效果 */
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fade-in-bottom {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slide-down {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}

/* 响应式布局 */
@media screen and (max-width: 768px) {
  .main-content {
    flex-direction: column;
  }
  
  .left-column,
  .right-column {
    flex: 1;
    width: 100%;
  }
  
  .header-center {
    font-size: 32rpx;
  }
  
  .job-badge {
    font-size: 20rpx;
    padding: 6rpx 16rpx;
  }
  
  .question-content {
    font-size: 32rpx;
  }
  
  .footer-controls {
    flex-direction: column;
    height: auto;
    gap: 16rpx;
  }
  
  .footer-btn {
    width: 100%;
  }
}

/* 滚动条样式优化 */
.history-list-content::-webkit-scrollbar {
  width: 8rpx;
}

.history-list-content::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4rpx;
  margin: 10rpx 0;
}

.history-list-content::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 4rpx;
  transition: background 0.3s ease;
}

.history-list-content::-webkit-scrollbar-thumb:hover {
  background: #888;
}

/* 优化滚动行为 */
.history-list-content {
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch; /* 增强iOS滚动体验 */
}

/* 加载状态 */
.fade-in {
  animation: fade-in 0.5s ease;
}

.fade-in-bottom {
  animation: fade-in-bottom 0.5s ease;
}

/* 确保文本不被截断 */
.block-title,
.block-time,
.question-content,
.answer-content {
  word-break: break-word;
  word-wrap: break-word;
}