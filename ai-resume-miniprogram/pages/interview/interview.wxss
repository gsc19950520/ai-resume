/* interview.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 顶部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  background-color: #ffffff;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-left, .header-right {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  text-align: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 行业-岗位标签 */
.industry-job-tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 28rpx;
  padding: 15rpx 25rpx;
  margin: 20rpx;
  border-radius: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

/* 会话信息 */
.session-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.job-type {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
  padding: 8rpx 20rpx;
  background-color: #f0f9ff;
  border-radius: 20rpx;
}

.timer {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
}

.timer-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 问题卡片 */
.question-card {
  background-color: #ffffff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s ease;
}

/* 动画效果 */
.animate-in {
  animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.depth-badge {
  position: absolute;
  top: -15rpx;
  right: 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.depth-basic {
  background-color: #07c160;
  color: #ffffff;
}

.depth-intermediate {
  background-color: #ff9500;
  color: #ffffff;
}

.depth-advanced {
  background-color: #ff3b30;
  color: #ffffff;
}

.question-number {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

.question-content {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.6;
}

/* 答题面板 */
.answer-panel {
  background-color: #ffffff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.answer-textarea-container {
  position: relative;
  margin-bottom: 30rpx;
}

.answer-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #333333;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999999;
}

/* 音频控制 */
.audio-controls {
  display: flex;
  gap: 20rpx;
}

.audio-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx;
  background-color: #f0f0f0;
  color: #333333;
  border-radius: 10rpx;
}

.audio-btn.recording {
  background-color: #ff3b30;
  color: #ffffff;
}

.audio-btn[disabled] {
  opacity: 0.5;
}

/* 反馈区域 */
.feedback-section {
  background-color: #ffffff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.score-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.score-item {
  flex: 1;
  text-align: center;
}

.score-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.score-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
}

.feedback-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.matched-points {
  margin-top: 20rpx;
}

.matched-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.matched-item {
  font-size: 26rpx;
  color: #07c160;
  margin-bottom: 8rpx;
  padding-left: 20rpx;
}

/* 追问提示样式 */
.follow-up-hint {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-top: 20rpx;
  border-left: 6rpx solid #2196f3;
}

.hint-text {
  color: #1565c0;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.5;
}

/* 城市薪资匹配卡片样式 */
.salary-match-card {
  background: linear-gradient(135deg, #fff3e0 0%, #fbe9e7 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 20rpx;
  border: 1rpx solid #ffcc80;
  transition: all 0.3s ease;
}

.salary-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #e65100;
  margin-bottom: 20rpx;
}

.salary-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.salary-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.salary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(255, 152, 0, 0.2);
}

.salary-item:last-child {
  border-bottom: none;
}

.salary-label {
  font-size: 28rpx;
  color: #666666;
}

.salary-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6f00;
}

.salary-expected {
  color: #4caf50;
}

.salary-match {
  color: #2196f3;
}

.match-status {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 8rpx;
  color: #666666;
}

/* 会话时间线 - SessionTimeline */
.timeline-section {
  margin: 30rpx 0;
  padding: 0 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.timeline-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.timeline-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.timeline-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.timeline-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 24rpx;
  transition: all 0.3s ease;
}

.timeline-number {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

.timeline-completed {
  background-color: #7ED321;
}

.timeline-current {
  background-color: #4A90E2;
  width: 50rpx;
  height: 50rpx;
  animation: pulse 1.5s infinite;
}

.timeline-pending {
  background-color: #E8E8E8;
}

.timeline-line {
  position: absolute;
  top: 20rpx;
  left: 64rpx;
  width: 48rpx;
  height: 4rpx;
  background-color: #E8E8E8;
}

.timeline-stats {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(74, 144, 226, 0.7);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(74, 144, 226, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(74, 144, 226, 0);
  }
}

/* 底部按钮 - NextSkipButtons */
.bottom-buttons {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.btn {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: none;
}

.skip-btn {
  flex: 0.8;
  background-color: #F5F5F5;
  color: #666;
}

.mark-btn {
  flex: 0.8;
  background-color: #F5A623;
  color: #fff;
}

.continue-btn {
  flex: 1.2;
  background: linear-gradient(135deg, #4A90E2, #50E3C2);
  color: #fff;
}

.gradient-btn {
  position: relative;
  overflow: hidden;
}

.gradient-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.gradient-btn:hover::before {
  left: 100%;
}

.btn-icon-small {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.btn:active {
  transform: scale(0.98);
}

.btn:disabled {
  opacity: 0.6;
  transform: none;
}

/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .page {
    background-color: #1F1F1F;
  }
  
  .navigation-bar {
    background-color: #2A2A2A;
    color: #FFFFFF;
  }
  
  .question-card-wrapper {
    background: linear-gradient(135deg, #4A90E2, #50E3C2);
  }
  
  .question-card {
    background-color: #2A2A2A;
    color: #FFFFFF;
  }
  
  .answer-panel {
    background-color: #2A2A2A;
  }
  
  .input-area {
    background-color: #3A3A3A;
    color: #FFFFFF;
  }
  
  .feedback-section {
    background-color: #2A2A2A;
    color: #FFFFFF;
  }
  
  .score-label {
    color: #FFFFFF;
  }
  
  .timeline-section {
    background-color: #2A2A2A;
  }
  
  .timeline-title {
    color: #FFFFFF;
  }
  
  .timeline-stats {
    color: #CCCCCC;
  }
  
  .bottom-buttons {
    background-color: #2A2A2A;
  }
  
  .skip-btn {
    background-color: #3A3A3A;
    color: #CCCCCC;
  }
  
  .loading {
    background-color: rgba(31, 31, 31, 0.9);
  }
  
  .loading-text {
    color: #FFFFFF;
  }
}

/* 加载提示 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background-color: #ffffff;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 30rpx;
  color: #666666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}